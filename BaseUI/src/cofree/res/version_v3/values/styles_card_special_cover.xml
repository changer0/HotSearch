<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <dimen name="card_rank_book_name_max_width">92dp</dimen>
    <dimen name="card_rank_book_desc_max_width">84dp</dimen>

    <!-- 其他书封的 card 样式 -->

    <style name="Card.SPCover">
        <item name="android:paddingLeft">@dimen/spacing_L2</item>
        <item name="android:paddingRight">@dimen/spacing_L2</item>
        <item name="android:paddingTop">@dimen/spacing_L6</item>
        <item name="android:paddingBottom">@dimen/spacing_L6</item>
    </style>

    <style name="Card_SPCover_Title" parent="BaseText.T2">
        <item name="android:textColor">@color/color_C106</item>
    </style>

    <style name="Card_SPCover_Content" parent="BaseText.T3">
        <item name="android:textColor">@color/color_C105</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!--超值包-->
    <style name="Card_SPCover_detail" parent="BaseText.T5">
        <item name="android:textColor">@color/color_C105</item>
    </style>

    <style name="Card_SPCover_Price" parent="BaseText.T5">
        <item name="android:textColor">@color/color_C401</item>
    </style>


    <!--榜单-->
    <style name="Card_SPCover_Serial" parent="BaseText.T2">
        <item name="android:textColor">@color/color_C105</item>
    </style>

    <style name="Card_SPCover_book_name" parent="BaseText.T2">
        <item name="android:textColor">@color/color_C106</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Card_SPCover_book_desc" parent="BaseText.T3">
        <item name="android:textColor">@color/color_C105</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>