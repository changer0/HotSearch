<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- 大书封的 card 样式 -->

    <!-- card 样式 包括card的背景颜色 margin padding 等设置-->
    <!-- 后续把OPPO圆角那一套可以统一过来 -->
    <!-- ****************  大图单书  ************************  -->
    <style name="Card.Lcover">
        <!-- TODO padding 也没必要放到这里吧？-->
        <item name="android:paddingLeft">@dimen/padding_L2</item>
        <item name="android:paddingRight">@dimen/padding_L2</item>
        <item name="android:paddingTop">@dimen/padding_L6</item>
        <item name="android:paddingBottom">@dimen/padding_L6</item>
    </style>

    <style name="Card_Lcover_Title" parent="BaseText.T2">
        <item name="android:textColor">@color/color_C106</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Card_Lcover_H3_Title" parent="BaseText.T8">
        <item name="android:textColor">@color/color_C106</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Card_Lcover_H3_Info" parent="BaseText.T5">
        <item name="android:textColor">@color/color_C105</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Card_Lcover_H3_Info2" parent="BaseText.T4">
        <item name="android:textColor">@color/color_C104</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Card_Lcover_H3_Info3" parent="BaseText.T4">
        <item name="android:textColor">@color/color_C105</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="Card_Lcover_Content" parent="BaseText.T3">
        <item name="android:textColor">@color/color_C105</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Card_Lcover_Author" parent="BaseText.T3">
        <item name="android:textColor">@color/color_C105</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Card_Lcover_Tag" parent="Category">
        <item name="android:textColor">@color/color_C105</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_width">wrap_content</item>
    </style>


</resources>