<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_search_association_sscover"
        style="@style/Cover.SSCover"
        android:layout_marginBottom="@dimen/margin_L6"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/margin_L6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/color_C201"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_search_association_content"
        style="@style/BaseText.T2.SingleLineEllipsize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_L6"
        android:layout_marginEnd="@dimen/margin_L2"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginRight="@dimen/margin_L2"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginTop="@dimen/margin_L6"
        android:textColor="@color/color_C106"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_search_association"
        app:layout_constraintStart_toEndOf="@+id/iv_search_association_sscover"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试" />

    <com.qq.reader.widget.ReaderButton
        android:id="@+id/btn_search_association"
        style="@style/BaseButton.Small.Style3"
        android:layout_width="72dp"
        android:layout_height="28dp"
        android:layout_marginBottom="@dimen/margin_L6"
        android:layout_marginEnd="@dimen/margin_L2"
        android:layout_marginRight="@dimen/margin_L2"
        android:layout_marginTop="@dimen/margin_L6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="查看" />
    <View
        android:id="@+id/divider"
        style="@style/DividerInCard"
        android:layout_width="0dp"
        android:layout_height="1px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_search_association"
        app:layout_constraintStart_toStartOf="@+id/tv_search_association_content" />

</androidx.constraintlayout.widget.ConstraintLayout>