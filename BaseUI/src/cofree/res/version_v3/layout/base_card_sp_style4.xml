<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/cons_root"
    style="@style/Card.SPCover"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tool:background="#ffffff"
    android:paddingBottom="0dp">

    <com.qq.reader.view.CoverImageView
        android:id="@+id/img_cover"
        style="@style/Cover.BookList"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        tool:src="@color/color_C201"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text1"
        style="@style/Card_SPCover_Title"
        android:layout_marginEnd="@dimen/margin_L2"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginRight="@dimen/margin_L2"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginTop="18dp"
        app:layout_constraintLeft_toRightOf="@+id/img_cover"
        app:layout_constraintRight_toLeftOf="@+id/img_arrow"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="超值包"
        android:maxLines="1"
        android:ellipsize="end"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text2"
        style="@style/Card_SPCover_Content"
        android:layout_marginEnd="@dimen/margin_L2"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginRight="@dimen/margin_L2"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginTop="@dimen/margin_L8"
        app:layout_constraintLeft_toRightOf="@+id/img_cover"
        app:layout_constraintRight_toLeftOf="@+id/img_arrow"
        app:layout_constraintTop_toBottomOf="@+id/tv_text1"
        tool:text="超值包超值包超值包超"
        android:maxLines="1"/>

    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="12dp"
        android:layout_height="24dp"
        android:src="@drawable/arrow_right_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        style="@style/DividerInCard"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@+id/img_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_text1"
        android:layout_marginTop="@dimen/margin_L6"/>

</androidx.constraintlayout.widget.ConstraintLayout>