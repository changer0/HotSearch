<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    style="@style/List.MiddleItem"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_L2"
        android:layout_marginRight="@dimen/margin_L2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_more"
        app:layout_constraintTop_toTopOf="parent">

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_title"
            style="@style/BaseText.T2_C106"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tool:text="Single Text"
            android:maxLines="1"
            android:ellipsize="end"/>

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_content"
            style="@style/BaseText.T3_C105"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tool:text="Single Text"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

    <com.qq.reader.widget.ReaderButton
        android:id="@+id/btn_more"
        style="@style/BaseButton.Small.Style3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tool:text="BUTTON"/>

</androidx.constraintlayout.widget.ConstraintLayout>