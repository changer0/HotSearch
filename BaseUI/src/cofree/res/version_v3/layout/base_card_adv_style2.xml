<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardAdv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top"
        app:constraint_referenced_ids="iv_cover,tv_title" />
    <View
        android:id="@+id/space_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_L2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/barrier_top"/>
    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_cover"
        android:layout_width="@dimen/common_dp_90"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:drawBorder="true"
        app:layout_constraintBottom_toTopOf="@+id/space"
        app:layout_constraintTop_toBottomOf="@+id/space_top"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_height="@dimen/common_dp_90"
        tools:src="@color/color_C201" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_title"
        style="@style/Card_Adv_Title"
        android:layout_marginRight="@dimen/margin_L2"
        app:layout_constraintBottom_toTopOf="@+id/tv_content"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_cover"
        tools:text="测试" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_content"
        style="@style/Card_Adv_Info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_title"
        app:layout_constraintRight_toLeftOf="@+id/iv_cover"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:text="测试"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/img_tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_L6"
        android:layout_marginBottom="@dimen/margin_L6"
        android:src="@drawable/adv_image"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        app:layout_constraintRight_toRightOf="@id/iv_cover"
        tools:visibility="visible" />
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="iv_cover,tv_content" />

    <View
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_L2"
        app:layout_constraintTop_toBottomOf="@+id/barrier"/>
    <View
        android:id="@+id/localstore_adv_divider"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintRight_toRightOf="@+id/tv_title"
        android:visibility="gone"
        style="@style/DividerInCard"/>
</androidx.constraintlayout.widget.ConstraintLayout>
