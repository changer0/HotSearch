<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_comment_square_sscover"
        style="@style/Cover.SSCover"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginTop="@dimen/margin_L6"
        android:layout_marginBottom="@dimen/margin_L6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/color_C201" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_comment_square_title"
        style="@style/BaseText.T2.SingleLineEllipsize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginTop="@dimen/margin_L6"
        android:layout_marginEnd="@dimen/margin_L2"
        android:layout_marginRight="@dimen/margin_L2"
        android:textColor="@color/color_C106"
        app:layout_constraintEnd_toStartOf="@+id/iv_comment_square_arrow"
        app:layout_constraintStart_toEndOf="@+id/iv_comment_square_sscover"
        app:layout_constraintTop_toTopOf="@+id/iv_comment_square_sscover"
        tools:text="中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试" />

    <ImageView
        android:id="@+id/iv_comment_square_arrow"
        android:layout_width="12dp"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/margin_L6"
        android:layout_marginEnd="@dimen/margin_L2"
        android:layout_marginRight="@dimen/margin_L2"
        android:layout_marginBottom="@dimen/margin_L6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_right_grey" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_comment_square_content"
        style="@style/BaseText.T3.SingleLineEllipsize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/color_C105"
        app:layout_constraintEnd_toEndOf="@+id/tv_comment_square_title"
        app:layout_constraintStart_toStartOf="@+id/tv_comment_square_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_comment_square_title"
        tools:text="中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试" />

</androidx.constraintlayout.widget.ConstraintLayout>