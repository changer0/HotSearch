<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_L2"
    android:paddingTop="@dimen/padding_L6"
    android:paddingRight="@dimen/padding_L2"
    tools:background="#ffffff">

    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_cover"
        style="@style/Cover.LCover"
        android:layout_marginEnd="@dimen/margin_L2"
        android:layout_marginRight="@dimen/margin_L2"
        android:layout_marginBottom="@dimen/margin_L6"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@color/color_C201" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_score"
        android:layout_width="30dp"
        android:layout_height="16dp"
        style="@style/BaseText.T5_C101"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        app:layout_constraintStart_toStartOf="@id/iv_cover"
        android:background="@drawable/bg_book_score"
        android:gravity="center"
        android:maxLines="1"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="8.5分" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_title"
        style="@style/Card_Lcover_Title"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginTop="@dimen/margin_L7"
        android:maxLines="1"
        android:text="@string/app_name"
        app:layout_constraintStart_toEndOf="@id/iv_cover"
        app:layout_constraintTop_toTopOf="parent" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_line1_info1"
        style="@style/BaseText.T4_C105"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginTop="@dimen/margin_L6"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:text="小说" />

    <View
        android:id="@+id/divider_inside_1"
        style="@style/DividerVertical"
        android:layout_marginLeft="@dimen/margin_L6"
        android:background="@color/color_C103"
        app:layout_constraintBottom_toBottomOf="@+id/tv_line1_info1"
        app:layout_constraintLeft_toRightOf="@+id/tv_line1_info1"
        app:layout_constraintTop_toTopOf="@+id/tv_line1_info1" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_line1_info2"
        style="@style/BaseText.T4_C105"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_L6"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_line1_info1"
        app:layout_constraintLeft_toRightOf="@+id/divider_inside_1"
        app:layout_constraintTop_toTopOf="@+id/tv_line1_info1"
        tools:text="作者啊啊" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_line2_info1"
        style="@style/BaseText.T4_C105"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginTop="@dimen/margin_L6"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        app:layout_constraintTop_toBottomOf="@+id/tv_line1_info1"
        tools:text="小说" />

    <View
        android:id="@+id/divider_inside_2"
        style="@style/DividerVertical"
        android:layout_marginLeft="@dimen/margin_L6"
        android:layout_marginTop="@dimen/common_dp_2"
        android:background="@color/color_C103"
        app:layout_constraintBottom_toBottomOf="@+id/tv_line2_info1"
        app:layout_constraintLeft_toRightOf="@+id/tv_line2_info1"
        app:layout_constraintTop_toTopOf="@+id/tv_line2_info1" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_line2_info2"
        style="@style/BaseText.T4_C105"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_L6"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_line2_info1"
        app:layout_constraintLeft_toRightOf="@+id/divider_inside_2"
        app:layout_constraintTop_toTopOf="@+id/tv_line2_info1"
        tools:text="作者啊啊" />

    <RatingBar
        android:id="@+id/cus_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginBottom="@dimen/margin_L6"
        android:isIndicator="true"
        android:maxHeight="12dp"
        android:minHeight="12dp"
        android:progressDrawable="@drawable/localstore_ratingbar_drawable"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        tools:progress="80" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_rating_score"
        style="@style/BaseText.T5_C501"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_L8"
        app:layout_constraintBottom_toBottomOf="@+id/cus_ratingbar"
        app:layout_constraintLeft_toRightOf="@+id/cus_ratingbar"
        app:layout_constraintTop_toTopOf="@+id/cus_ratingbar"
        tools:text="9.2分" />


    <com.qq.reader.widget.ReaderButton
        android:id="@+id/bt_button1"
        style="@style/BaseButton.Style1"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginBottom="@dimen/common_dp_2"
        android:text="@string/free_try_read"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
