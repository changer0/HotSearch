<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Subtitle.Normal">

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text1"
        style="@style/BaseText.T2_C106"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_L2"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginRight="@dimen/margin_L2"
        android:layout_marginStart="@dimen/margin_L2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_text2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginRight="@dimen/margin_L2"
        tools:text="T2C106"
        android:maxLines="1"
        android:ellipsize="end"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text2"
        style="@style/BaseText.T3_C105"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_L8"
        android:layout_marginRight="@dimen/margin_L8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_right_arrow"
        tools:text="T3C105"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/img_right_arrow"
        style="@style/RightGreyArrow"
        android:layout_marginEnd="@dimen/margin_L2"
        android:layout_marginRight="@dimen/margin_L2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/arrow_right_grey"
        tools:visibility="visible" />

    <com.qq.reader.widget.ReaderButton
        android:id="@+id/btn_more"
        style="@style/BaseButton.Small.Style3"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Button" />

    <View
        android:id="@+id/divider"
        style="@style/DividerInCard"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="1px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_right_arrow"
        app:layout_constraintStart_toStartOf="@+id/tv_text1" />


</androidx.constraintlayout.widget.ConstraintLayout>