<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/padding_L2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_c107_selector">


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/title"
        tools:text="标题"
        style="@style/BaseText.T7_C106"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintBottom_toTopOf="@+id/content"
        app:layout_constraintStart_toStartOf="@+id/content"
        app:layout_constraintEnd_toEndOf="@id/content"
        android:layout_height="wrap_content" />


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/content"
        style="@style/BaseText.T8_C105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
        android:layout_marginTop="@dimen/margin_L6"
        app:layout_constraintEnd_toStartOf="@+id/iv_cover"
        android:layout_marginEnd="@dimen/margin_L4"
        android:layout_marginStart="@dimen/margin_L2"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <com.qq.reader.view.CoverImageView
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/title"
        tools:background="@color/color_C201"
        android:layout_marginEnd="@dimen/margin_L2"
        android:id="@+id/iv_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/book_shadow_height"
        android:background="@drawable/book_shadow"
        app:layout_constraintTop_toBottomOf="@id/iv_cover"
        app:layout_constraintStart_toStartOf="@id/iv_cover"
        app:layout_constraintEnd_toEndOf="@id/iv_cover"/>

</androidx.constraintlayout.widget.ConstraintLayout>