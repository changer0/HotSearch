<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingEnd="@dimen/margin_L4"
    android:paddingBottom="@dimen/padding_L2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        tools:src="@drawable/bg_envelope_back1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_root"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/bg_envelope_back"
        android:layout_width="92dp"
        android:layout_height="wrap_content" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/iv_root"
        xmlns:tools="http://schemas.android.com/tools"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/bg_envelope_front"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.qq.reader.view.CoverImageView
            android:id="@+id/iv_cover"
            app:layout_constraintStart_toStartOf="@+id/icon_top"
            app:layout_constraintEnd_toEndOf="@+id/icon_top1"
            app:layout_constraintTop_toTopOf="@+id/icon_top"
            android:layout_marginTop="@dimen/margin_L7"
            android:layout_marginStart="@dimen/margin_L7"
            android:layout_marginEnd="@dimen/margin_L7"
            style="@style/Cover.LCover"
            android:layout_height="109dp"
            android:layout_width="82dp"
            tools:background="@color/color_C201"/>

        <com.qq.reader.view.CoverImageView
            android:id="@+id/click_mask"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/iv_cover"
            app:layout_constraintEnd_toEndOf="@id/iv_cover"
            app:layout_constraintBottom_toBottomOf="@id/iv_cover"
            app:layout_constraintTop_toTopOf="@id/iv_cover"
            android:background="@drawable/bg_c109_selector"
            tools:src="@color/color_C201" />

        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/icon_top"
            tools:src="@drawable/icon_medal1"
            android:layout_width="18dp"
            android:layout_height="21dp" />
        <ImageView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/icon_top1"
            tools:src="@drawable/icon_medal1"
            android:visibility="invisible"
            android:layout_width="18dp"
            android:layout_height="21dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        tools:src="@drawable/bg_envelope_front1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_root"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/bg_envelope_front"
        android:layout_width="92dp"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/book_shadow_height"
        android:layout_marginStart="@dimen/margin_L7"
        android:layout_marginEnd="@dimen/margin_L7"
        android:background="@drawable/book_shadow_golden"
        app:layout_constraintTop_toBottomOf="@id/iv_root"
        app:layout_constraintStart_toStartOf="@id/iv_root"
        app:layout_constraintEnd_toEndOf="@id/iv_root"/>

    <TextView
        android:id="@+id/tv_title"
        tools:text="标题"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_root"
        android:layout_marginStart="@dimen/margin_L7"
        style="@style/Card_Lcover_H3_Title"
        android:layout_marginTop="@dimen/margin_L5"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_width="92dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_content"
        tools:text="作者"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/margin_L7"
        style="@style/BaseText.T4_C104"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_width="92dp"
        android:layout_marginTop="@dimen/margin_L9"
        android:layout_height="wrap_content" />




</androidx.constraintlayout.widget.ConstraintLayout>