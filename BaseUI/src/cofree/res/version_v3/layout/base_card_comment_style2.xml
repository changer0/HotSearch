<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_L2"
    android:paddingRight="@dimen/padding_L2">

    <ImageView
        android:id="@+id/img_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_L6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/default_user_icon" />

    <ImageView
        android:id="@+id/img_avatar_mask"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/margin_L6"
        android:scaleType="fitXY"
        android:src="@drawable/bookclub_avatar_small_bg_selector"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_title"
        style="@style/BaseText.T2_M_C106"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_L2"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="165dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/img_avatar"
        app:layout_constraintTop_toTopOf="@+id/img_avatar"
        app:layout_constraintBottom_toTopOf="@+id/rating_container"
        tools:text="白衣速白衣白衣衣衣衣衣"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_floor"
        style="@style/BaseText.T3_C105"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="25楼"
        tools:visibility="visible" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_tag1"
        style="@style/BaseText.T6_C301"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_L8"
        android:background="@drawable/bg_base_border_line3"
        android:paddingLeft="@dimen/padding_L8"
        android:paddingRight="@dimen/padding_L8"
        android:visibility="gone"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintLeft_toRightOf="@+id/tv_title"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:layout_constraintVertical_bias="0.5"
        tools:text="管理员"
        tools:visibility="visible" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_tag2"
        style="@style/BaseText.T6_C202"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_L8"
        android:background="@drawable/bg_base_border_line2"
        android:paddingLeft="@dimen/padding_L8"
        android:paddingRight="@dimen/padding_L8"
        android:gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tag1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/tv_tag1"
        app:layout_constraintTop_toTopOf="@+id/tv_tag1"
        tools:text="管理员"
        tools:visibility="visible" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_tag3"
        style="@style/BaseText.T6_C202"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_L8"
        android:layout_marginEnd="@dimen/margin_L2"
        android:background="@drawable/bg_base_border_line2"
        android:paddingLeft="@dimen/padding_L8"
        android:paddingRight="@dimen/padding_L8"
        android:visibility="gone"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="@+id/tv_tag2"
        app:layout_constraintLeft_toRightOf="@+id/tv_tag2"
        app:layout_constraintTop_toTopOf="@+id/tv_tag2"
        tools:text="作者"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/img_tag_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/img_tag1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_tag_author_footmark"
            android:visibility="gone"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/img_tag2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_tag_nice_comment"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rating_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="@+id/img_avatar"
        tools:visibility="visible"
        android:visibility="visible">

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_subtitle"
            style="@style/BaseText.T5_C105"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="@dimen/margin_L9"
            android:ellipsize="end"
            android:visibility="gone"
            android:maxLines="1"
            tools:text="《亿万星不及你及你》及》及你》及》及你你你"
            tools:visibility="gone"/>

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/rating_text"
            style="@style/BaseText.T5_C105"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_subtitle"
            android:layout_marginRight="@dimen/margin_L9"
            android:layout_marginTop="@dimen/margin_L9"
            tools:text="力荐"
            android:visibility="gone"
            tools:visibility="visible"/>

        <com.qq.reader.widget.ReaderRatingBar
            android:id="@+id/rating_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rating_text"
            android:layout_toRightOf="@+id/rating_text"
            android:isIndicator="true"
            android:maxHeight="12dp"
            android:minHeight="12dp"
            android:numStars="5"
            android:progressDrawable="@drawable/localstore_ratingbar_drawable"
            android:rating="3.4"
            android:visibility="gone"
            tools:visibility="visible"/>
    </RelativeLayout>



    <ImageView
        android:id="@+id/iv_content_title_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_comment_reward"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_content_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_content_title"
        android:paddingEnd="@dimen/padding_L8" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_content_title"
        style="@style/BaseText.T3_C106"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_avatar"
        app:layout_constraintStart_toEndOf="@+id/iv_content_title_tag"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/margin_L6"
        tools:text="现实残酷，最是 你很牛逼很牛逼MMP" />


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_content_details"
        style="@style/BaseText.T3_C105"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_L6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_content_title"
        tools:text="呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵" />



    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_content_details" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_time"
        style="@style/BaseText.T5_C105"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/button_agree"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_agree"
        app:layout_constraintVertical_bias="0.5"
        tools:text="2018/3/4 01:06" />


    <LinearLayout
        android:id="@+id/button_agree"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginEnd="@dimen/margin_L6"
        android:layout_marginTop="@dimen/margin_L6"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_L6"
        android:paddingRight="@dimen/padding_L6"
        app:layout_constraintRight_toLeftOf="@+id/button_reply"
        app:layout_constraintTop_toBottomOf="@+id/content_container">

        <ImageView
            android:id="@+id/iv_agree"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            tools:src="@drawable/button_comment_like_selector" />

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_count_agree"
            style="@style/BaseText.T5_C105"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_L8"
            android:layout_marginStart="@dimen/margin_L8"
            android:gravity="center"
            tools:text="20" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_reply"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="@dimen/margin_L6"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_L6"
        android:paddingRight="@dimen/padding_L6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/content_container">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@drawable/button_comment_reply_selector" />

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_count_reply"
            style="@style/BaseText.T5_C105"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_L8"
            android:layout_marginStart="@dimen/margin_L8"
            android:gravity="center"
            tools:text="20" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        style="@style/DividerInCard"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/margin_L6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/button_reply"
        />

</androidx.constraintlayout.widget.ConstraintLayout>