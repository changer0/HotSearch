<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    style="@style/Card.SPCover"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tool:background="#ffffff">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_line_per_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="1" />

    <com.qq.reader.view.CoverImageView
        android:id="@+id/img_left"
        style="@style/Cover.ValuePackBehind"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/horizontal_line_per_1"
        app:layout_constraintLeft_toLeftOf="parent"
        tool:src="@color/color_C401"/>

    <com.qq.reader.view.CoverImageView
        android:id="@+id/img_right"
        style="@style/Cover.ValuePackBehind"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/horizontal_line_per_1"
        app:layout_constraintLeft_toRightOf="@+id/img_left"
        tool:src="@color/color_C501"/>

    <com.qq.reader.view.CoverImageView
        android:id="@+id/img_center"
        style="@style/Cover.SCover"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        tool:src="@color/color_C201"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text1"
        style="@style/Card_SPCover_Title"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginTop="@dimen/margin_L8"
        app:layout_constraintLeft_toRightOf="@+id/img_right"
        tool:text="超值包"
        android:maxLines="1"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text2"
        style="@style/Card_SPCover_Content"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginStart="@dimen/margin_L2"
        app:layout_constraintLeft_toRightOf="@+id/img_right"
        app:layout_constraintTop_toBottomOf="@+id/tv_text1"
        tool:text="超值包超值包超值包超"
        android:maxLines="1"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text3"
        style="@style/Card_SPCover_detail"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginTop="@dimen/margin_L8"
        app:layout_constraintLeft_toRightOf="@+id/img_right"
        app:layout_constraintTop_toBottomOf="@+id/tv_text2"
        tool:text="20004本"
        android:maxLines="1"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text4"
        style="@style/Card_SPCover_Price"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginStart="@dimen/margin_L2"
        app:layout_constraintLeft_toRightOf="@+id/img_right"
        app:layout_constraintTop_toBottomOf="@+id/tv_text3"
        tool:text="20egrraagega"
        android:maxLines="1"/>

</androidx.constraintlayout.widget.ConstraintLayout>