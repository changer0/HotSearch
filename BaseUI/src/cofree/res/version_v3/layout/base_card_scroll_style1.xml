<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="136dp"
    android:layout_height="146dp"
    tools:background="@color/color_C201"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:id="@+id/top_style"
        android:layout_width="32dp"
        android:layout_height="3dp"
        android:background="@color/card_scroll_top_color1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_L4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:singleLine="true"
        android:ellipsize="end"
        android:maxEms="4"
        style="@style/BaseText.T7_C106"
        tools:text="重生" />

    <ImageView
        android:id="@+id/fire_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_fire"
        android:layout_marginEnd="@dimen/margin_L9"
        app:layout_constraintTop_toTopOf="@+id/read_count"
        app:layout_constraintBottom_toBottomOf="@+id/read_count"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/read_count" />

    <TextView
        android:id="@+id/read_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_L9"
        style="@style/BaseText.T4_C301"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/fire_icon"
        app:layout_constraintEnd_toEndOf="parent"

        tools:text="45万人在读" />

    <com.qq.reader.view.CoverImageView
        android:id="@+id/img_left"
        android:layout_width="36dp"
        android:layout_height="48dp"
        tools:background="#FF0"
        android:layout_marginRight="35dp"
        app:layout_constraintTop_toTopOf="@id/img_right"
        app:layout_constraintBottom_toBottomOf="@id/img_right"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@id/img_right"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.qq.reader.view.CoverImageView
        android:id="@+id/img_right"
        tools:background="#FF0"
        android:layout_width="36dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="@id/img_center"
        app:layout_constraintStart_toEndOf="@id/img_left"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <com.qq.reader.view.CoverImageView
        android:id="@+id/img_center"
        android:layout_width="47dp"
        android:layout_height="63dp"
        android:layout_marginTop="@dimen/margin_L3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/read_count"
        tools:background="#0F0" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/book_shadow_height"
        android:background="@drawable/book_shadow"
        app:layout_constraintTop_toBottomOf="@id/img_left"
        app:layout_constraintStart_toStartOf="@id/img_left"
        app:layout_constraintEnd_toEndOf="@id/img_right"/>


    <com.qq.reader.view.CoverImageView
        android:id="@+id/click_mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_c107_selector"/>

</androidx.constraintlayout.widget.ConstraintLayout>