<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_cover0"
        style="@style/Cover.MCover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/spacing_L6"
        android:layout_marginLeft="@dimen/spacing_L2"
        tools:scaleType="fitXY"
        tools:src="@color/color_C201" />

<!--    <com.qq.reader.view.CoverImageView-->
<!--        android:id="@+id/iv_cover_mask0"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="0dp"-->
<!--        android:scaleType="fitXY"-->
<!--        android:background="@drawable/bg_iv_cover_selector_new"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/iv_cover0"-->
<!--        app:layout_constraintEnd_toEndOf="@id/iv_cover0"-->
<!--        app:layout_constraintStart_toStartOf="@id/iv_cover0"-->
<!--        app:layout_constraintTop_toTopOf="@id/iv_cover0" />-->

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/book_shadow_height"
        android:background="@drawable/book_shadow"
        app:layout_constraintTop_toBottomOf="@id/iv_cover0"
        app:layout_constraintStart_toStartOf="@id/iv_cover0"
        app:layout_constraintEnd_toEndOf="@id/iv_cover0"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_tag0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BaseText.T5_C101"
        app:layout_constraintTop_toTopOf="@id/iv_cover0"
        app:layout_constraintStart_toEndOf="@id/view0"
        android:layout_marginTop="@dimen/common_dp_3"
        android:layout_marginEnd="39dp"
        android:maxLines="1"
        android:visibility="gone"
        tools:visibility="visible"
        tools:background="@drawable/bg_tag_boy"
        tools:text="言情"/>

    <View
        android:id="@+id/view0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="@id/iv_cover0"
        app:layout_constraintTop_toTopOf="@id/iv_cover0"
        android:layout_marginEnd="6dp"
        android:visibility="invisible"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_title0"
        style="@style/BaseText.T8_C106"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_L5"
        android:layout_marginRight="@dimen/spacing_L7"
        android:layout_marginTop="@dimen/margin_L6"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/iv_cover0"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/iv_cover0"
        tools:text="啊啊啊啊啊啊" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_content0"
        style="@style/BaseText.T4_C106"
        android:textColor="#5911141A"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_L5"
        android:layout_marginRight="@dimen/spacing_L7"
        android:layout_marginTop="@dimen/spacing_L9"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/iv_cover0"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@id/tv_title0"
        tools:text="共140,100册" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_sub_content0"
        style="@style/BaseText.T4_C301"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_L5"
        android:layout_marginRight="@dimen/spacing_L7"
        android:layout_marginTop="@dimen/spacing_L6"
        android:layout_marginBottom="@dimen/margin_L6"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/iv_cover0"
        app:layout_constraintEnd_toStartOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover0"
        tools:text="869万阅读" />

    <LinearLayout
        android:id="@+id/container0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_c107_selector"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_cover1"
        style="@style/Cover.MCover"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/spacing_L6"
        android:layout_marginLeft="@dimen/spacing_L7"
        tools:scaleType="fitXY"
        tools:src="@color/color_C201" />

<!--    <com.qq.reader.view.CoverImageView-->
<!--        android:id="@+id/iv_cover_mask1"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="0dp"-->
<!--        android:scaleType="fitXY"-->
<!--        android:background="@drawable/bg_iv_cover_selector_new"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/iv_cover1"-->
<!--        app:layout_constraintEnd_toEndOf="@id/iv_cover1"-->
<!--        app:layout_constraintStart_toStartOf="@id/iv_cover1"-->
<!--        app:layout_constraintTop_toTopOf="@id/iv_cover1" />-->

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/book_shadow_height"
        android:background="@drawable/book_shadow"
        app:layout_constraintTop_toBottomOf="@id/iv_cover1"
        app:layout_constraintStart_toStartOf="@id/iv_cover1"
        app:layout_constraintEnd_toEndOf="@id/iv_cover1"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BaseText.T5_C101"
        app:layout_constraintTop_toTopOf="@id/iv_cover1"
        app:layout_constraintStart_toEndOf="@id/view1"
        android:layout_marginTop="@dimen/common_dp_3"
        android:layout_marginEnd="39dp"
        android:maxLines="1"
        android:visibility="gone"
        tools:visibility="visible"
        tools:background="@drawable/bg_tag_boy"
        tools:text="言情"/>

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintEnd_toStartOf="@id/iv_cover1"
        app:layout_constraintTop_toTopOf="@id/iv_cover1"
        android:layout_marginEnd="6dp"
        android:visibility="invisible"/>


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_title1"
        style="@style/BaseText.T8_C106"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_L5"
        android:layout_marginRight="@dimen/spacing_L2"
        android:layout_marginTop="@dimen/margin_L6"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/iv_cover1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_cover1"
        tools:text="啊啊啊啊啊啊" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_content1"
        style="@style/BaseText.T4_C106"
        android:textColor="#5911141A"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_L5"
        android:layout_marginRight="@dimen/margin_L2"
        android:layout_marginTop="@dimen/spacing_L9"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/iv_cover1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title1"
        tools:text="共140,100册" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_sub_content1"
        style="@style/BaseText.T4_C301"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_L5"
        android:layout_marginRight="@dimen/margin_L2"
        android:layout_marginBottom="@dimen/margin_L6"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintStart_toEndOf="@id/iv_cover1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover1"
        tools:text="869万阅读" />

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_c107_selector"/>

