<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="baseCard"
            type="com.qq.reader.common.utils.DataBindingBeanFactory.CardMCoverStyle3" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> baseCard.mOnCardClickListener.onCardClick()}"
        android:paddingBottom="@dimen/padding_L6"
        android:paddingLeft="@dimen/padding_L2"
        android:paddingRight="@dimen/padding_L2"
        android:paddingTop="@dimen/padding_L6"
        android:background="@drawable/card_press_selector">

        <com.qq.reader.view.CoverImageView
            android:id="@+id/iv_cover"
            style="@style/Cover.MCover"
            android:localstoreIconUrl="@{baseCard.mCover}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:scaleType="fitXY"/>

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_title"
            style="@style/BaseText.T2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/margin_L7"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{baseCard.mTitle}"
            android:textColor="@color/color_C106"
            app:layout_constraintLeft_toRightOf="@+id/iv_cover"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_cover"
            tools:text="呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵" />


        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_content"
            style="@style/BaseText.T3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/margin_L6"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{baseCard.mContent}"
            android:textColor="@color/color_C105"
            app:layout_constraintLeft_toRightOf="@+id/iv_cover"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            tools:text="呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵" />

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_author"
            style="@style/BaseText.T4_C105"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="@dimen/margin_L2"
            android:layout_marginTop="@dimen/margin_L7"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{baseCard.mAuthor}"
            app:layout_constraintLeft_toRightOf="@+id/iv_cover"
            app:layout_constraintRight_toLeftOf="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/tv_content"
            tools:text="呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵" />

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_tag1"
            style="@style/Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{baseCard.mTag1}"
            android:visibility="@{baseCard.isShowTag1 ? View.VISIBLE : View.GONE}"
            app:layout_constraintLeft_toRightOf="@+id/iv_cover"
            app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
            tools:text="呵呵呵呵呵"/>

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_tag2"
            style="@style/Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/margin_L6"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{baseCard.mTag2}"
            android:visibility="@{baseCard.isShowTag2 ? View.VISIBLE : View.GONE}"
            app:layout_constraintLeft_toRightOf="@+id/tv_tag1"
            app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
            tools:text="呵呵呵呵呵"/>

        <Button
            android:id="@+id/button"
            style="@style/BaseButton.Small.Style3"
            android:onClick="@{() -> baseCard.mOnCardClickListener.onButtonClick()}"
            android:text="@{baseCard.mButtonTips}"
            app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="继续阅读"/>

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_score"
            style="@style/Score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_L6"
            android:layout_marginEnd="@dimen/margin_L6"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@{baseCard.mScore}"
            android:visibility="@{baseCard.isShowScoreTag ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
            app:layout_constraintRight_toRightOf="@+id/iv_cover"
            tools:text="9.0"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>