    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cons_root"
    android:paddingBottom="@dimen/padding_L6"
    android:paddingTop="@dimen/padding_L6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_book1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cl_book2"
        app:layout_constraintHorizontal_chainStyle="spread_inside">


        <com.qq.reader.view.CoverImageView
            android:id="@+id/iv_cover"
            style="@style/Cover.LCover"
            android:layout_marginLeft="@dimen/common_dp_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@color/color_C201" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/book_shadow_height"
            android:background="@drawable/book_shadow"
            app:layout_constraintTop_toBottomOf="@id/iv_cover"
            app:layout_constraintStart_toStartOf="@id/iv_cover"
            app:layout_constraintEnd_toEndOf="@id/iv_cover"/>

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_tag_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BaseText.T5_C101"
            app:layout_constraintTop_toTopOf="@id/iv_cover"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/common_dp_3"
            android:maxLines="1"
            android:visibility="gone"
            tools:background="@drawable/bg_tag_boy"
            tools:text="言情"
            tools:visibility="visible"/>

        <!--点击态 -->
        <com.qq.reader.view.CoverImageView
            android:id="@+id/iv_cover_mask"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_c109_selector"
            app:layout_constraintBottom_toBottomOf="@id/iv_cover"
            app:layout_constraintEnd_toEndOf="@id/iv_cover"
            app:layout_constraintStart_toStartOf="@id/iv_cover"
            app:layout_constraintTop_toTopOf="@id/iv_cover"
            tools:background="#0D000000" />

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_tag_top"
            style="@style/Top.Style1"
            android:layout_marginStart="@dimen/spacing_L6"
            android:layout_marginLeft="@dimen/spacing_L6"
            android:layout_marginTop="@dimen/spacing_L6"
            android:text="@string/rank_top1"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/iv_cover"
            app:layout_constraintTop_toTopOf="@id/iv_cover"
            tools:visibility="visible" />


        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_score"
            android:layout_width="30dp"
            android:layout_height="16dp"
            style="@style/BaseText.T5_C101"
            app:layout_constraintBottom_toBottomOf="@id/iv_cover"
            app:layout_constraintStart_toStartOf="@id/iv_cover"
            android:background="@drawable/bg_book_score"
            android:gravity="center"
            android:maxLines="1"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="8.5分" />

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_title"
            style="@style/Card_Lcover_H3_Title"
            android:layout_marginTop="@dimen/margin_L5"
            android:ellipsize="end"
            app:layout_constraintEnd_toEndOf="@id/iv_cover"
            app:layout_constraintLeft_toLeftOf="@id/iv_cover"
            app:layout_constraintRight_toRightOf="@id/iv_cover"
            app:layout_constraintStart_toStartOf="@id/iv_cover"
            app:layout_constraintTop_toBottomOf="@+id/iv_cover"
            tools:text="asdfsdafsdafsdfgdfgdfg" />

        <com.qq.reader.widget.TextViewDel
            android:id="@+id/tv_text1"
            style="@style/Card_Lcover_H3_Info3"
            android:layout_marginTop="@dimen/margin_L9"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/iv_cover"
            app:layout_constraintLeft_toLeftOf="@id/iv_cover"
            app:layout_constraintRight_toRightOf="@id/iv_cover"
            app:layout_constraintStart_toStartOf="@id/iv_cover"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            tools:text="asdfsdafsdafs"
            tools:visibility="visible" />

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_text2"
            style="@style/Card_Lcover_H3_Info2"
            android:layout_marginTop="@dimen/margin_L9"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/iv_cover"
            app:layout_constraintLeft_toLeftOf="@id/iv_cover"
            app:layout_constraintStart_toStartOf="@id/iv_cover"
            app:layout_constraintTop_toBottomOf="@+id/tv_text1"
            app:layout_constraintEnd_toStartOf="@id/nf_button"
            tools:text="asdfsdafsdafs"
            tools:visibility="visible" />

        <!--负反馈-->
        <ImageView
            android:id="@+id/nf_button"
            android:src="@drawable/pop_negative_feedback_btn"
            app:layout_constraintStart_toEndOf="@id/tv_text2"
            app:layout_constraintTop_toTopOf="@id/tv_text2"
            app:layout_constraintBottom_toBottomOf="@id/tv_text2"
            app:layout_constraintEnd_toEndOf="@id/iv_cover"
            tools:visibility="visible"
            android:visibility="gone"
            android:layout_width="24dp"
            android:layout_height="16dp" />

        <ImageView
            android:id="@+id/img_tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_L6"
            android:layout_marginRight="@dimen/margin_L6"
            android:layout_marginBottom="@dimen/margin_L6"
            android:scaleType="fitXY"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="@id/iv_cover"
            app:layout_constraintTop_toTopOf="@id/iv_cover"
            tools:src="@drawable/icon_listen_tag"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/img_tag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_L6"
            android:layout_marginBottom="@dimen/margin_L6"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
            app:layout_constraintLeft_toLeftOf="@id/iv_cover"
            tools:src="@drawable/icon_listen_tag"
            />

        <ImageView
