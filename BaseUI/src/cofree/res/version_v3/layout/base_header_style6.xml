<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/padding_L3"
    android:paddingBottom="@dimen/padding_L9"
    android:paddingStart="@dimen/padding_L2">

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_subtitle_desc"
        style="@style/BaseText.T8_C105"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/nf_button_top"
        android:gravity="center_vertical"
        tools:text="T8C105"
        android:maxLines="1"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/nf_button_top"
        android:src="@drawable/pop_negative_feedback_btn"
        app:layout_constraintTop_toTopOf="@id/tv_subtitle_desc"
        app:layout_constraintBottom_toBottomOf="@id/tv_subtitle_desc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_subtitle_desc"
        android:paddingStart="@dimen/padding_L6"
        android:visibility="gone"
        tools:visibility="visible"
        android:paddingEnd="@dimen/padding_L2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>