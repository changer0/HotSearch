<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Card.Lcover"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="#ffffff">

    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_cover"
        style="@style/Cover.LCover"
        android:layout_marginEnd="@dimen/margin_L2"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginRight="@dimen/margin_L2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:src="@color/color_C201" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fl_read_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_L6"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        app:layout_constraintRight_toRightOf="@id/iv_cover">

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_read_txt"
            android:layout_width="75dp"
            android:layout_height="24dp"
            android:background="@drawable/bg_enter_reading"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/padding_L6"
            android:paddingRight="@dimen/padding_L6"
            android:text="@string/enter_read"
            style="@style/BaseText.T4_C101"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- 切图有问题 -->
        <ImageView
            android:id="@+id/iv_read_txt_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/spacing_L6"
            android:layout_marginLeft="@dimen/margin_L9"
            android:src="@drawable/arrow_right_grey"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
