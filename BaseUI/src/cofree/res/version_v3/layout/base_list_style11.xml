<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/List.MiddleItem"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_L2"
        android:layout_marginRight="@dimen/margin_L2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_text"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/tv_title"
                style="@style/BaseText.T2_C106"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                tools:text="Single Text"
                android:maxLines="1"
                android:ellipsize="end"/>

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/tv_tag"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/spacing_L6"
                android:layout_toRightOf="@id/tv_title"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:paddingEnd="@dimen/spacing_L8"
                android:paddingStart="@dimen/spacing_L8"
                android:singleLine="true" />
        </RelativeLayout>

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_content"
            style="@style/BaseText.T3_C105"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="Single Text"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text"
        style="@style/BaseText.T3_C105"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_L8"
        android:layout_marginRight="@dimen/margin_L8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_arrow"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Single Text" />

    <ImageView
        android:id="@+id/btn_arrow"
        android:layout_width="12dp"
        android:layout_height="24dp"
        android:src="@drawable/arrow_right_grey"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>