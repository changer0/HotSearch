<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/cons_root"
    style="@style/Card.SPCover"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tool:background="#ffffff">

    <com.qq.reader.view.CoverImageView
        android:id="@+id/img_cover"
        style="@style/Cover.BookRank"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        tool:background="@color/color_C201" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text1_1"
        style="@style/Card_SPCover_Serial"
        android:layout_marginLeft="@dimen/spacing_L2"
        android:layout_marginStart="@dimen/spacing_L2"
        android:layout_marginTop="10dp"
        android:text="1"
        app:layout_constraintLeft_toRightOf="@+id/img_cover"
        app:layout_constraintTop_toTopOf="@+id/img_cover" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text1_2"
        style="@style/Card_SPCover_book_name"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/spacing_L2"
        android:layout_marginStart="@dimen/spacing_L2"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_text1_1"
        app:layout_constraintLeft_toRightOf="@id/tv_text1_1"
        app:layout_constraintStart_toEndOf="@id/tv_text1_1"
        tool:text="asdfsdfsdfdsfds" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text1_3"
        style="@style/Card_SPCover_book_desc"
        android:layout_marginLeft="@dimen/margin_L6"
        android:layout_marginStart="@dimen/margin_L6"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_text1_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_text1_2"
        app:layout_constraintStart_toEndOf="@id/tv_text1_2"
        tool:text="awiegjoangsdsdfdsfsdfdsfsdfdsfdsf" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text2_1"
        style="@style/Card_SPCover_Serial"
        android:layout_marginEnd="@dimen/margin_L6"
        android:layout_marginLeft="@dimen/spacing_L2"
        android:layout_marginRight="@dimen/margin_L6"
        android:layout_marginStart="@dimen/spacing_L2"
        android:layout_marginTop="12dp"
        android:text="2"
        app:layout_constraintLeft_toRightOf="@id/img_cover"
        app:layout_constraintTop_toBottomOf="@id/tv_text1_1" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text2_2"
        style="@style/Card_SPCover_book_name"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/spacing_L2"
        android:layout_marginStart="@dimen/spacing_L2"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_text2_1"
        app:layout_constraintLeft_toRightOf="@id/tv_text2_1"
        app:layout_constraintStart_toEndOf="@id/tv_text2_1"
        tool:text="awiegjoangagegwagegaeg" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text2_3"
        style="@style/Card_SPCover_book_desc"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/margin_L6"
        android:layout_marginStart="@dimen/margin_L6"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_text2_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_text2_2"
        app:layout_constraintStart_toEndOf="@id/tv_text2_2"
        tool:text="awiegjoangfewafagawggeag" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text3_1"
        style="@style/Card_SPCover_Serial"
        android:layout_marginEnd="@dimen/margin_L6"
        android:layout_marginLeft="@dimen/spacing_L2"
        android:layout_marginRight="@dimen/margin_L6"
        android:layout_marginStart="@dimen/spacing_L2"
        android:layout_marginTop="12dp"
        android:text="3"
        app:layout_constraintLeft_toRightOf="@id/img_cover"
        app:layout_constraintTop_toBottomOf="@id/tv_text2_1" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text3_2"
        style="@style/Card_SPCover_book_name"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/spacing_L2"
        android:layout_marginStart="@dimen/spacing_L2"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_text3_1"
        app:layout_constraintLeft_toRightOf="@id/tv_text3_1"
        app:layout_constraintStart_toEndOf="@id/tv_text3_1"
        tool:text="awiegjoantersdfsdfdsdfdsfsftg" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text3_3"
        style="@style/Card_SPCover_book_desc"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/margin_L6"
        android:layout_marginStart="@dimen/margin_L6"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_text3_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_text3_2"
        app:layout_constraintStart_toEndOf="@id/tv_text3_2"
        tool:text="awiegjoang" />

</androidx.constraintlayout.widget.ConstraintLayout>