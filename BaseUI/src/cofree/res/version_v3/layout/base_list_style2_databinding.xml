<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="list"
            type="com.qq.reader.common.utils.DataBindingBeanFactory.ListStyle2" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_layout"
        style="@style/Subtitle.Normal"
        android:visibility="@{list.isShowList ? View.VISIBLE : View.GONE}"
        android:onClick="@{() -> list.mOnListClickListener.onItemClick()}"
        android:paddingRight="@dimen/padding_L2"
        android:paddingLeft="@dimen/padding_L2" >

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_text1"
            style="@style/BaseText.T2_C106"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_L6"
            android:layout_marginEnd="@dimen/spacing_L2"
            android:layout_marginRight="@dimen/spacing_L2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_text2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginRight="@dimen/spacing_L2"
            tools:text="T2C106"
            android:text="@{list.mTitle}"/>

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_text2"
            style="@style/BaseText.T3_C105"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_L6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/img_right_arrow"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="T3C105"
            android:text="@{list.mRightText}"
            android:visibility="@{list.isShowRightText ? View.VISIBLE : View.GONE}"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/img_right_arrow"
            style="@style/RightGreyArrow"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="@dimen/spacing_L8"
            app:srcCompat="@drawable/arrow_right_grey"
            tools:visibility="visible"
            android:visibility="@{list.isShowRightIcon ? View.VISIBLE : View.GONE}"/>

        <com.qq.reader.widget.ReaderButton
            android:id="@+id/btn_more"
            style="@style/BaseButton.Small.Style3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Button"
            tools:visible="gone"
            android:visibility="@{list.isShowRightButton ? View.VISIBLE : View.GONE}"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>