<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardAdv"
    android:paddingTop="@dimen/spacing_L2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_title"
        style="@style/Card_Adv_Title"
        android:paddingBottom="@dimen/spacing_L6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="dsjfklsdjfksldfjdzsklfjdskjfldskjfkdsjfldksjfkdjfsdkjfdskjf" />
    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_cover1"
        android:layout_width="@dimen/common_dp_90"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintDimensionRatio="3:2"
        app:layout_constraintBottom_toTopOf="@+id/space"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_cover2"
        tools:src="@color/color_C201"
        tools:layout_height="@dimen/common_dp_90"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_L6"
        android:layout_marginRight="@dimen/margin_L6"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover1"
        app:layout_constraintRight_toRightOf="@id/iv_cover1"
        android:src="@drawable/adv_image"
        tools:visibility="visible" />
    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_cover2"
        android:layout_width="@dimen/common_dp_90"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintDimensionRatio="3:2"
        app:layout_constraintLeft_toRightOf="@+id/iv_cover1"
        app:layout_constraintRight_toLeftOf="@+id/iv_cover3"
        app:layout_constraintTop_toTopOf="@+id/iv_cover1"
        android:layout_marginLeft="@dimen/spacing_L2"
        tools:src="@color/color_C201"
        tools:layout_height="@dimen/common_dp_90"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_L6"
        android:layout_marginRight="@dimen/margin_L6"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover2"
        app:layout_constraintRight_toRightOf="@id/iv_cover2"
        android:src="@drawable/adv_image"
        tools:visibility="visible" />
    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_cover3"
        android:layout_width="@dimen/common_dp_90"
        android:layout_height="wrap_content"
        app:layout_constraintDimensionRatio="3:2"
        android:scaleType="fitXY"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintLeft_toRightOf="@+id/iv_cover2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_cover1"
        android:layout_marginLeft="@dimen/spacing_L2"
        tools:src="@color/color_C201"
        tools:layout_height="@dimen/common_dp_90"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_L6"
        android:layout_marginRight="@dimen/margin_L6"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover3"
        app:layout_constraintRight_toRightOf="@id/iv_cover3"
        android:src="@drawable/adv_image"
        tools:visibility="visible" />
    <View
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_L2"
        app:layout_constraintTop_toBottomOf="@+id/iv_cover1"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <View
        android:id="@+id/localstore_adv_divider"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        style="@style/DividerInCard"/>
</androidx.constraintlayout.widget.ConstraintLayout>
