                    android:layout_height="139dp"
                    android:layout_marginLeft="@dimen/spacing_L2"
                    android:layout_marginStart="@dimen/spacing_L2"
                    android:scaleType="fitXY"
                    app:layout_constraintDimensionRatio="3:4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:src="@color/color_C201" />

                <com.qq.reader.widget.ReaderTextView
                    android:id="@id/tv_score"
                    style="@style/Score"
                    android:layout_marginBottom="@dimen/margin_L6"
                    android:layout_marginEnd="@dimen/margin_L6"
                    android:layout_marginRight="@dimen/margin_L6"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
                    app:layout_constraintRight_toRightOf="@id/iv_cover"
                    tools:text="9.0" />

