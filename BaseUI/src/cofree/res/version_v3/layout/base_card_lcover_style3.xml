<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Card.Lcover"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/spacing_L2"
    tools:background="#ffffff">

    <!--封面-->
    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_cover"
        style="@style/Cover.XLCover"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginRight="@dimen/margin_L2"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:src="@color/color_C201" />

    <!--标题-->
    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_title"
        style="@style/BaseText.T1_M_C106"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_L1"
        android:layout_marginTop="@dimen/spacing_L4"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintLeft_toRightOf="@+id/iv_cover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_cover"
        tools:text="@string/app_name" />

    <!--作者-->
    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_line1_info2"
        style="@style/BaseText.T4_C201"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_L2"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        tools:text="作者啊啊" />

    <!--类别-->
    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_line1_info1"
        style="@style/BaseText.T4_C201"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_L6"
        android:maxLines="1"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_line1_info2"
        tools:text="小说" />

    <!--字数-->
    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_line2_info1"
        style="@style/BaseText.T4_C105"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_L6"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintLeft_toLeftOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_line1_info1"
        tools:text="字数" />

    <!--以下为cofree去掉的布局，为避免冲突仅保留而不显示-->
    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_coverTag"
        style="@style/BookTag.BookTag1"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@id/iv_cover"
        app:layout_constraintTop_toTopOf="@id/iv_cover"
        tools:text="免费" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_score"
        android:layout_width="30dp"
        android:layout_height="16dp"
        style="@style/BaseText.T5_C101"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        app:layout_constraintStart_toStartOf="@id/iv_cover"
        android:background="@drawable/bg_book_score"
        android:gravity="center"
        android:maxLines="1"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="8.5分" />

    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/common_dp_24"
        android:layout_marginLeft="@dimen/common_dp_24"
        android:layout_marginTop="@dimen/margin_L7"
        android:isIndicator="true"
        android:maxHeight="12dp"
        android:minHeight="12dp"
        android:progressDrawable="@drawable/localstore_ratingbar_drawable"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:progress="80" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_rating_score"
        style="@style/BaseText.T5_C301"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_L6"
        android:layout_marginLeft="@dimen/margin_L6"
        app:layout_constraintBottom_toBottomOf="@+id/ratingbar"
        app:layout_constraintLeft_toRightOf="@+id/ratingbar"
        app:layout_constraintTop_toTopOf="@+id/ratingbar"
        tools:text="9.2分" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_comment_count"
        style="@style/BaseText.T5_C105"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_L8"
        android:layout_marginLeft="@dimen/margin_L8"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rating_score"
        app:layout_constraintLeft_toRightOf="@+id/tv_rating_score"
        app:layout_constraintTop_toTopOf="@+id/tv_rating_score"
        tools:text="8950人评" />

    <View
        android:id="@+id/divider_inside_1"
        style="@style/DividerVertical"
        android:layout_marginStart="@dimen/margin_L6"
        android:layout_marginLeft="@dimen/margin_L6"
        android:background="@color/color_C103"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_line1_info1"
        app:layout_constraintLeft_toRightOf="@+id/tv_line1_info1"
        app:layout_constraintTop_toTopOf="@+id/tv_line1_info1" />

    <View
        android:id="@+id/divider_inside_2"
        style="@style/DividerVertical"
        android:layout_marginStart="@dimen/margin_L6"
        android:layout_marginLeft="@dimen/margin_L6"
        android:background="@color/color_C103"
        android:visibility="gone" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_line2_info2"
        style="@style/BaseText.T4_C105"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:visibility="gone"
        tools:text="作者啊啊" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_bottom"
        style="@style/BaseText.T3_C201"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:visibility="gone"
        tools:text="开通包月，在线阅读免费" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/ratinglayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="ratingbar,tv_rating_score,tv_comment_count" />
</androidx.constraintlayout.widget.ConstraintLayout>
