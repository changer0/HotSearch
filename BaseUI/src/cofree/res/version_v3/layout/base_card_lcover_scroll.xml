<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:paddingTop="@dimen/padding_L6"
    android:paddingBottom="@dimen/padding_L6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.qq.reader.view.CoverImageView
        android:id="@+id/img_cover"
        style="@style/Cover.LCover"
        android:layout_marginStart="@dimen/common_dp_6"
        android:layout_marginEnd="@dimen/common_dp_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@color/color_C201" />

    <com.qq.reader.view.CoverImageView
        android:id="@+id/img_cover_mask"
        style="@style/Cover.LCover"
        android:layout_marginStart="@dimen/common_dp_6"
        android:layout_marginEnd="@dimen/common_dp_6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_c109_selector"
        tools:src="@color/color_C201" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/book_shadow_height"
        android:background="@drawable/book_shadow"
        app:layout_constraintTop_toBottomOf="@id/img_cover"
        app:layout_constraintStart_toStartOf="@id/img_cover"
        app:layout_constraintEnd_toEndOf="@id/img_cover"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_tag_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/BaseText.T5_C101"
        app:layout_constraintTop_toTopOf="@id/img_cover"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/common_dp_3"
        android:maxLines="1"
        android:visibility="gone"
        tools:background="@drawable/bg_tag_boy"
        tools:text="言情"
        tools:visibility="visible"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_score"
        android:layout_width="30dp"
        android:layout_height="16dp"
        style="@style/BaseText.T5_C101"
        app:layout_constraintBottom_toBottomOf="@id/img_cover"
        app:layout_constraintStart_toStartOf="@id/img_cover"
        android:background="@drawable/bg_book_score"
        android:gravity="center"
        android:maxLines="1"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="8.5分"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/title"
        style="@style/Card_Lcover_H3_Title"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_L4"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/img_cover"
        app:layout_constraintStart_toStartOf="@id/img_cover"
        app:layout_constraintEnd_toEndOf="@id/img_cover"
        tools:text="标题标题标题标题标题标题标题标题标题标题标题标题标题"
        tools:visibility="visible" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/content"
        style="@style/BaseText.T4_C104"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_L9"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="呵呵呵呵呵呵呵 "
        android:maxEms="4"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/img_cover"/>



    <!--负反馈-->
    <ImageView
        android:id="@+id/nf_button"
        android:src="@drawable/pop_negative_feedback_btn"
        app:layout_constraintTop_toTopOf="@id/content"
        app:layout_constraintBottom_toBottomOf="@id/content"
        app:layout_constraintEnd_toEndOf="@id/img_cover"
        tools:visibility="visible"
        android:visibility="gone"
        android:layout_width="24dp"
        android:layout_height="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
