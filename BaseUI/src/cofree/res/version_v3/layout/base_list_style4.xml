<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    style="@style/List.NormalItem"
    android:layout_width="match_parent">

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text1"
        style="@style/BaseText.T2_C106"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_L2"
        tool:text="Single Text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_text2"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/horizontal_line_per_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text2"
        style="@style/BaseText.T3_C105"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tool:text="Single Text"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_line_per_1"
        app:layout_constraintRight_toRightOf="parent" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_text3"
        style="@style/BaseText.T3_C105"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tool:text="Single Text"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_line_per_1" />

</androidx.constraintlayout.widget.ConstraintLayout>