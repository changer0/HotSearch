    <com.qq.reader.view.CoverImageView
        android:id="@+id/img4"
        android:layout_width="0dp"
        android:layout_height="86dp"
        tools:src="@color/color_C201"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img3"
        app:layout_constraintTop_toBottomOf="@id/tv_title4"
        android:layout_marginTop="@dimen/margin_L1"
        android:layout_marginStart="@dimen/margin_L4"
        android:scaleType="centerCrop"/>

    <com.qq.reader.view.CoverImageView
        android:id="@+id/img4_mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/img4"
        app:layout_constraintStart_toStartOf="@id/img4"
        app:layout_constraintEnd_toEndOf="@id/img4"
        app:layout_constraintBottom_toBottomOf="@id/img4"
        android:background="@drawable/bg_c109_selector" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/book_shadow_height"
        android:background="@drawable/book_shadow"
        app:layout_constraintTop_toBottomOf="@id/img4"
        app:layout_constraintStart_toStartOf="@id/img4"
        app:layout_constraintEnd_toEndOf="@id/img4"/>


