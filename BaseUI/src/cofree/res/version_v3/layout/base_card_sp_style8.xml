<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/padding_L2"
    android:paddingStart="@dimen/padding_L2"
    android:paddingBottom="@dimen/padding_L6"
    android:paddingTop="@dimen/padding_L2">


    <View
        android:id="@+id/divider1"
        android:layout_width="3dp"
        android:layout_height="14dp"
        android:background="@color/color_C201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title1"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title1"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_title1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/BaseText.T7_C106"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="豪门"
        app:layout_constraintStart_toEndOf="@id/divider1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/margin_L8"
        app:layout_constraintEnd_toEndOf="@id/img1" />

    
    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_subtitle1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/BaseText.T4_C105"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="45万人在读"
        android:layout_marginStart="@dimen/margin_L9"
        app:layout_constraintTop_toBottomOf="@+id/tv_title1"
        android:layout_marginTop="@dimen/margin_L9"
        app:layout_constraintEnd_toEndOf="@id/tv_title1"/>

    <com.qq.reader.view.CoverImageView
        android:id="@+id/img1"
        android:layout_width="0dp"
        android:layout_height="86dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img2"
        tools:src="@color/color_C201"
        android:layout_marginEnd="@dimen/margin_L4"
        android:layout_marginTop="@dimen/margin_L6"
        android:scaleType="centerCrop"/>

    <com.qq.reader.view.CoverImageView
        android:id="@id/img1_mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/img1"
        app:layout_constraintStart_toStartOf="@id/img1"
        app:layout_constraintEnd_toEndOf="@id/img1"
        app:layout_constraintBottom_toBottomOf="@id/img1"
        android:background="@drawable/bg_c109_selector" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/book_shadow_height"
        android:background="@drawable/book_shadow"
        app:layout_constraintTop_toBottomOf="@id/img1"
        app:layout_constraintStart_toStartOf="@id/img1"
        app:layout_constraintEnd_toEndOf="@id/img1"/>

    <View
        android:id="@+id/divider2"
        android:layout_width="3dp"
        android:layout_height="14dp"
        android:background="@color/color_C201"
        app:layout_constraintStart_toStartOf="@id/img2"
        app:layout_constraintTop_toTopOf="@+id/tv_title2"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title2"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_title2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/BaseText.T7_C106"
        tools:text="豪门"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/divider2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/margin_L8"
        app:layout_constraintEnd_toEndOf="@id/img2" />


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_subtitle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/BaseText.T4_C105"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/img2"
        tools:text="45万人在读"
        android:layout_marginStart="@dimen/margin_L9"
        app:layout_constraintTop_toBottomOf="@+id/tv_title2"
        android:layout_marginTop="@dimen/margin_L9"
        app:layout_constraintEnd_toEndOf="@id/tv_title2"/>

    <com.qq.reader.view.CoverImageView
        android:id="@+id/img2"
        android:layout_width="0dp"
        android:layout_height="86dp"
        tools:src="@color/color_C201"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle2"
        app:layout_constraintStart_toEndOf="@id/img1"
        android:layout_marginTop="@dimen/margin_L6"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"/>

    <com.qq.reader.view.CoverImageView
        android:id="@id/img2_mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/img2"
        app:layout_constraintStart_toStartOf="@id/img2"
        app:layout_constraintEnd_toEndOf="@id/img2"
        app:layout_constraintBottom_toBottomOf="@id/img2"
        android:background="@drawable/bg_c109_selector" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/book_shadow_height"
        android:background="@drawable/book_shadow"
        app:layout_constraintTop_toBottomOf="@id/img2"
        app:layout_constraintStart_toStartOf="@id/img2"
        app:layout_constraintEnd_toEndOf="@id/img2"/>

    <View
        android:id="@+id/divider3"
        android:layout_width="3dp"
        android:layout_height="14dp"
        android:background="@color/color_C201"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_title3"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title3"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_title3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/BaseText.T7_C106"
        tools:text="豪门"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/divider3"
        app:layout_constraintTop_toBottomOf="@id/img1"
        android:layout_marginStart="@dimen/margin_L8"
        app:layout_constraintEnd_toEndOf="@id/img3"
        android:layout_marginTop="@dimen/margin_L2"/>


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_subtitle3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/BaseText.T4_C105"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="45万人在读"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/margin_L9"
        app:layout_constraintTop_toBottomOf="@+id/tv_title3"
        android:layout_marginTop="@dimen/margin_L9"
        app:layout_constraintEnd_toEndOf="@id/tv_title3"/>


    <com.qq.reader.view.CoverImageView
        android:id="@+id/img3"
        android:layout_width="0dp"
        android:layout_height="86dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/img4"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle3"
        tools:src="@color/color_C201"
        android:layout_marginTop="@dimen/margin_L6"
        android:scaleType="centerCrop"/>

    <com.qq.reader.view.CoverImageView
        android:id="@+id/img3_mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/img3"
        app:layout_constraintStart_toStartOf="@id/img3"
        app:layout_constraintEnd_toEndOf="@id/img3"
        app:layout_constraintBottom_toBottomOf="@id/img3"
        android:background="@drawable/bg_c109_selector" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/book_shadow_height"
        android:background="@drawable/book_shadow"
        app:layout_constraintTop_toBottomOf="@id/img3"
        app:layout_constraintStart_toStartOf="@id/img3"
        app:layout_constraintEnd_toEndOf="@id/img3"/>


    <View
        android:id="@+id/divider4"
        android:layout_width="3dp"
        android:layout_height="14dp"
        android:background="@color/color_C201"
        app:layout_constraintStart_toStartOf="@id/img4"
        app:layout_constraintTop_toTopOf="@+id/tv_title4"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title4"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_title4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/BaseText.T7_C106"
        tools:text="豪门"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/divider2"
        app:layout_constraintTop_toBottomOf="@id/img2"
        android:layout_marginStart="@dimen/margin_L8"
        app:layout_constraintEnd_toEndOf="@id/img4"
        android:layout_marginTop="@dimen/margin_L2"/>


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_subtitle4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/BaseText.T4_C105"
        app:layout_constraintStart_toStartOf="@id/img2"
        tools:text="45万人在读"
        android:maxLines="1"
