<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="java.util.ArrayList"/>


        <variable
            name="books"
            type="ArrayList&lt;com.qq.reader.common.utils.DataBindingBeanFactory.CardLCoverH3>" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_layout"
        style="@style/Card.Lcover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_L6"
        tools:background="#ffffff">

        <!-- TODO 听书tag 右上角tag-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_book1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/guideline3"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="@{books.size() > 0 ? View.VISIBLE : View.GONE}">

            <com.qq.reader.view.CoverImageView
                android:id="@+id/iv_cover1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/spacing_L6"
                android:layout_marginStart="@dimen/spacing_L6"
                android:localstoreIconUrl="@{books.size() > 0 ? books.get(0).mCover : null}"
                android:onClick="@{() -> (books.size() > 0 ? books.get(0).mOnCardClickListener.onCoverClick() : null)}"
                android:scaleType="fitXY"
                app:layout_constraintDimensionRatio="3:4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:src="@color/color_C201"
                android:src="@drawable/card_press_selector"/>

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/tv_score1"
                style="@style/Score"
                android:layout_marginBottom="@dimen/margin_L6"
                android:layout_marginEnd="@dimen/margin_L6"
                android:layout_marginRight="@dimen/margin_L6"
                android:text="@{books.size() > 0 ? books.get(0).mScore : null}"
                android:visibility="@{books.size() > 0 &amp;&amp; books.get(0).isShowScoreTag ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/iv_cover1"
                app:layout_constraintRight_toRightOf="@id/iv_cover1"
                tools:text="9.0"/>

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/tv_title1"
                style="@style/Card_Lcover_H3_Title"
                android:layout_marginTop="@dimen/margin_L6"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@{books.size() > 0 ? books.get(0).mTitle : null}"
                app:layout_constraintEnd_toEndOf="@id/iv_cover1"
                app:layout_constraintLeft_toLeftOf="@id/iv_cover1"
                app:layout_constraintRight_toRightOf="@id/iv_cover1"
                app:layout_constraintStart_toStartOf="@id/iv_cover1"
                app:layout_constraintTop_toBottomOf="@id/iv_cover1"
                tools:text="asdfsdafsdafsdfgdfgdfg"/>

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/tv_text1_1"
                style="@style/Card_Lcover_H3_Info"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/iv_cover1"
                app:layout_constraintLeft_toLeftOf="@id/iv_cover1"
                app:layout_constraintRight_toRightOf="@id/iv_cover1"
                app:layout_constraintStart_toStartOf="@id/iv_cover1"
                app:layout_constraintTop_toBottomOf="@id/tv_title1"
                tools:text="asdfsdafsdafs" />

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/tv_text1_2"
                style="@style/Card_Lcover_H3_Info2"
                android:layout_marginTop="@dimen/margin_L9"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/iv_cover1"
                app:layout_constraintLeft_toLeftOf="@id/iv_cover1"
                app:layout_constraintRight_toRightOf="@id/iv_cover1"
                app:layout_constraintStart_toStartOf="@id/iv_cover1"
                app:layout_constraintTop_toBottomOf="@id/tv_text1_1"
                tools:text="asdfsdafsdafs" />

            <ImageView
                android:id="@+id/img_tag1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_L6"
                android:layout_marginRight="@dimen/margin_L6"
                android:layout_marginTop="@dimen/margin_L6"
                android:src="@drawable/arrow_right_grey"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="@id/iv_cover1"
                app:layout_constraintTop_toTopOf="@id/iv_cover1" />

            <ImageView
                android:id="@+id/img_tag1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_L6"
                android:layout_marginLeft="@dimen/margin_L6"
                android:src="@drawable/arrow_right_grey"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/iv_cover1"
                app:layout_constraintLeft_toLeftOf="@id/iv_cover1" />

        </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_book2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            android:visibility="@{books.size() > 1 ? View.VISIBLE : View.GONE}">

            <com.qq.reader.view.CoverImageView
                android:id="@+id/iv_cover2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:localstoreIconUrl="@{books.size() > 1 ? books.get(1).mCover : null}"
                android:onClick="@{() -> (books.size() > 1 ? books.get(1).mOnCardClickListener.onCoverClick() : null)}"
                android:scaleType="fitXY"
                android:src="@drawable/card_press_selector"
                app:layout_constraintDimensionRatio="3:4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/tv_score2"
                style="@style/Score"
                android:layout_marginBottom="@dimen/margin_L6"
                android:layout_marginEnd="@dimen/margin_L6"
                android:layout_marginRight="@dimen/margin_L6"
                android:text="@{books.size() > 1 ? books.get(1).mScore : null}"
                android:visibility="@{books.size() > 1 &amp;&amp; books.get(1).isShowScoreTag ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/iv_cover2"
                app:layout_constraintRight_toRightOf="@id/iv_cover2"
                tools:text="9.0"/>

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/tv_title2"
                style="@style/Card_Lcover_H3_Title"
                android:layout_marginTop="@dimen/margin_L6"
                android:text="@{books.size() > 1 ? books.get(1).mTitle : null}"
                app:layout_constraintEnd_toEndOf="@id/iv_cover2"
                app:layout_constraintLeft_toLeftOf="@id/iv_cover2"
                app:layout_constraintRight_toRightOf="@id/iv_cover2"
                app:layout_constraintStart_toStartOf="@id/iv_cover2"
                app:layout_constraintTop_toBottomOf="@id/iv_cover2"
                tools:text="@string/app_name"/>

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/tv_text2_1"
                style="@style/Card_Lcover_H3_Info"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/iv_cover2"
                app:layout_constraintLeft_toLeftOf="@id/iv_cover2"
                app:layout_constraintRight_toRightOf="@id/iv_cover2"
                app:layout_constraintStart_toStartOf="@id/iv_cover2"
                app:layout_constraintTop_toBottomOf="@id/tv_title2"
                tools:text="asdfsdafsdafs" />

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/tv_text2_2"
                style="@style/Card_Lcover_H3_Info2"
                android:layout_marginTop="@dimen/margin_L9"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/iv_cover2"
                app:layout_constraintLeft_toLeftOf="@id/iv_cover2"
                app:layout_constraintRight_toRightOf="@id/iv_cover2"
                app:layout_constraintStart_toStartOf="@id/iv_cover2"
                app:layout_constraintTop_toBottomOf="@id/tv_text2_1"
                tools:text="asdfsdafsdafs" />

            <ImageView
                android:id="@+id/img_tag2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_L6"
                android:layout_marginRight="@dimen/margin_L6"
                android:layout_marginTop="@dimen/margin_L6"
                android:src="@drawable/arrow_right_grey"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="@id/iv_cover2"
                app:layout_constraintTop_toTopOf="@id/iv_cover2" />

            <ImageView
                android:id="@+id/img_tag2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_L6"
                android:layout_marginLeft="@dimen/margin_L6"
                android:src="@drawable/arrow_right_grey"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/iv_cover2"
                app:layout_constraintLeft_toLeftOf="@id/iv_cover2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_book3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            android:visibility="@{books.size() > 2 ? View.VISIBLE : View.GONE}">

            <com.qq.reader.view.CoverImageView
                android:id="@+id/iv_cover3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:localstoreIconUrl="@{books.size() > 2 ? books.get(2).mCover : null}"
                android:onClick="@{() -> (books.size() > 2 ? books.get(2).mOnCardClickListener.onCoverClick() : null)}"
                android:scaleType="fitXY"
                android:src="@drawable/card_press_selector"
                app:layout_constraintDimensionRatio="3:4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/tv_score3"
                style="@style/Score"
                android:layout_marginBottom="@dimen/margin_L6"
                android:layout_marginEnd="@dimen/margin_L6"
                android:layout_marginRight="@dimen/margin_L6"
                android:text="@{books.size() > 2 ? books.get(2).mScore : null}"
                android:visibility="@{books.size() > 2 &amp;&amp; books.get(2).isShowScoreTag ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/iv_cover3"
                app:layout_constraintRight_toRightOf="@id/iv_cover3"
                tools:text="9.0"/>

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/tv_title3"
                style="@style/Card_Lcover_H3_Title"
                android:layout_marginTop="@dimen/margin_L6"
                android:layout_marginBottom="@dimen/margin_L6"
                android:text="@{books.size() > 2 ? books.get(2).mTitle : null}"
                app:layout_constraintEnd_toEndOf="@id/iv_cover3"
                app:layout_constraintLeft_toLeftOf="@id/iv_cover3"
                app:layout_constraintRight_toRightOf="@id/iv_cover3"
                app:layout_constraintStart_toStartOf="@id/iv_cover3"
                app:layout_constraintTop_toBottomOf="@id/iv_cover3"
                tools:text="@string/app_name"/>

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/tv_text3_1"
                style="@style/Card_Lcover_H3_Info"
                android:layout_marginBottom="@dimen/margin_L6"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/iv_cover3"
                app:layout_constraintLeft_toLeftOf="@id/iv_cover3"
                app:layout_constraintRight_toRightOf="@id/iv_cover3"
                app:layout_constraintStart_toStartOf="@id/iv_cover3"
                app:layout_constraintTop_toBottomOf="@+id/tv_title3"
                tools:text="asdfsdafsdafs" />

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/tv_text3_2"
                style="@style/Card_Lcover_H3_Info2"
                android:layout_marginTop="@dimen/margin_L9"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@id/iv_cover3"
                app:layout_constraintLeft_toLeftOf="@id/iv_cover3"
                app:layout_constraintRight_toRightOf="@id/iv_cover3"
                app:layout_constraintStart_toStartOf="@id/iv_cover3"
                app:layout_constraintTop_toBottomOf="@id/tv_text3_1"
                tools:text="asdfsdafsdafs" />

            <ImageView
                android:id="@+id/img_tag3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_L6"
                android:layout_marginRight="@dimen/margin_L6"
                android:layout_marginTop="@dimen/margin_L6"
                android:src="@drawable/arrow_right_grey"
                android:visibility="gone"
                app:layout_constraintRight_toRightOf="@id/iv_cover3"
                app:layout_constraintTop_toTopOf="@id/iv_cover3" />

            <ImageView
                android:id="@+id/img_tag3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_L6"
                android:layout_marginLeft="@dimen/margin_L6"
                android:src="@drawable/arrow_right_grey"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/iv_cover3"
                app:layout_constraintLeft_toLeftOf="@id/iv_cover3" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.333" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.667" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

