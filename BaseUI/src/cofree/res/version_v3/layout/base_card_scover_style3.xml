<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/padding_L2"
    android:paddingEnd="@dimen/padding_L2"
    android:paddingTop="@dimen/padding_L4"
    android:paddingBottom="@dimen/padding_L4">

    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_classicalpage_scover"
        style="@style/Cover.SCover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_classicalpage_title"
        style="@style/BaseText.T2.SingleLineEllipsize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginTop="8dp"
        android:textColor="@color/color_C106"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_classicalpage_scover"
        app:layout_constraintTop_toTopOf="@+id/iv_classicalpage_scover"
        tools:text="中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_classicalpage_contentline1"
        style="@style/BaseText.T4_C201"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_L7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_classicalpage_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_classicalpage_title"
        tools:text="中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_classicalpage_contentline2"
        style="@style/BaseText.T4_C105"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toStartOf="@+id/tv_classicalpage_tag"
        app:layout_constraintStart_toStartOf="@+id/tv_classicalpage_title"
        app:layout_constraintBottom_toBottomOf="@+id/iv_classicalpage_scover"
        tools:text="中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_classicalpage_num"
        style="@style/Category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_classicalpage_scover"
        tools:text="300万字" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_classicalpage_tag"
        style="@style/Category"
        android:layout_marginEnd="8dp"
        app:layout_goneMarginEnd="0dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_classicalpage_num"
        app:layout_constraintBottom_toBottomOf="@+id/iv_classicalpage_scover"
        tools:text="都市" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_classicalpage_desc"
        style="@style/BaseText.T3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:textColor="@color/color_C105"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_classicalpage_scover"
        tools:text="中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试" />
</androidx.constraintlayout.widget.ConstraintLayout>