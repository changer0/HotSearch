<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/padding_L2"
    android:paddingTop="@dimen/padding_L2"
    android:paddingEnd="@dimen/padding_L2"
    android:paddingBottom="@dimen/padding_L8"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/iv_header_icon"
        android:layout_width="@dimen/common_dp_16"
        android:layout_height="@dimen/common_dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/alert_dialog_bg" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_subtitle_title"
        style="@style/BaseText.T1_C106"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_L6"
        android:layout_marginEnd="@dimen/margin_L1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_subtitle_action"
        app:layout_constraintStart_toEndOf="@id/iv_header_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="0dp"
        app:qq_font="siyuansong"
        tools:text="T2MC106" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_subtitle_action"
        style="@style/BaseText.T4_M_C201"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:textColor="@color/base_text_c201_selector"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_subtitle_title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="T3MC201"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>