<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingStart="@dimen/padding_L2"
    android:paddingEnd="@dimen/padding_L2"
    android:paddingTop="@dimen/padding_L2"
    android:paddingBottom="@dimen/padding_L8">

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_subtitle_title"
        style="@style/BaseText.T0_C106"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_subtitle_desc"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="T2MC106"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:qq_font="siyuansong"/>


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_subtitle_category"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        style="@style/Category"
        tools:text="分类标签"
        android:maxLines="1"
        tools:visibility="visible"
        android:layout_marginStart="@dimen/margin_L8"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@+id/tv_subtitle_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_subtitle_title"
        app:layout_constraintStart_toEndOf="@id/tv_subtitle_title"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_subtitle_desc"
        style="@style/BaseText.T4_C104"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle_title"
        android:layout_marginTop="@dimen/margin_L7"
        app:layout_constraintEnd_toStartOf="@+id/tv_subtitle_more"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/margin_L1"
        tools:text="T3C105"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_goneMarginEnd="0dp"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_subtitle_more"
        style="@style/BaseText.T3_M_C201"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="T3MC201"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>