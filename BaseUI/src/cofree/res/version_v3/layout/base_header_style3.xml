<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_L2"
    android:paddingBottom="@dimen/padding_L8"
    android:paddingStart="@dimen/padding_L2"
    android:paddingEnd="@dimen/padding_L2">

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_subtitle_title"
        style="@style/BaseText.T0_C106"
        android:includeFontPadding="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_subtitle_action"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="@dimen/margin_L1"
        app:layout_goneMarginEnd="0dp"
        tools:text="T2MC106"
        android:maxLines="1"
        android:ellipsize="end"
        app:qq_font="siyuansong"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_subtitle_action"
        style="@style/BaseText.T4_M_C201"
        android:textColor="@color/base_text_c201_selector"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_subtitle_title"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="T3MC201"
        tools:visibility="visible"
        android:gravity="bottom"/>

</androidx.constraintlayout.widget.ConstraintLayout>