<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/title_container"
    android:paddingTop="@dimen/padding_L2"
    android:paddingBottom="@dimen/padding_L8"
    android:paddingStart="@dimen/padding_L2"
    android:paddingEnd="@dimen/padding_L2">

    <ImageView
        android:id="@+id/tv_subtitle_img"
        android:layout_width="24dp"
        android:layout_height="24dp"
        tools:src="@drawable/icon_listen_tag"
        android:visibility="gone"
        android:layout_marginEnd="@dimen/margin_L8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_subtitle_title"/>


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_subtitle_title"
        style="@style/BaseText.T0_C106"
        android:layout_width="0dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_subtitle_more"
        app:layout_constraintStart_toEndOf="@id/tv_subtitle_img"
        android:gravity="center_vertical"
        app:qq_font="siyuansong"
        tools:text="T3C105"
        android:maxLines="1"
        android:ellipsize="end"/>


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_subtitle_more"
        style="@style/BaseText.T3_C105"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/margin_L8"
        app:layout_constraintEnd_toStartOf="@+id/tv_subtitle_arrow"
        tools:text="T3C105"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/tv_subtitle_arrow"
        style="@style/RightGreyArrow"
        android:src="@drawable/arrow_right_grey"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/arrow_right_grey"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>