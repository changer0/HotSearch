<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_L6"
    android:paddingLeft="@dimen/padding_L2"
    android:paddingRight="@dimen/padding_L2"
    android:paddingTop="@dimen/padding_L6">

    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_cover"
        style="@style/Cover.MCover"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:scaleType="fitXY"
        tools:src="@color/book_store_default_cover_color"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_title"
        style="@style/BaseText.T2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/margin_L7"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_C106"
        app:layout_constraintLeft_toRightOf="@+id/iv_cover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_cover"
        tools:text="呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵" />


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_author"
        style="@style/BaseText.T4_C105"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/margin_L7"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintLeft_toRightOf="@+id/iv_cover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:text="呵呵呵呵"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_extra"
        style="@style/BaseText.T3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/margin_L6"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="145dp"
        android:textColor="@color/color_C105"
        app:layout_constraintLeft_toRightOf="@+id/iv_cover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_author"
        tools:text="呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵" />

    <ImageView
        android:id="@+id/iv_label"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="@+id/tv_extra"
        app:layout_constraintTop_toBottomOf="@+id/tv_extra"
        app:layout_constraintTop_toTopOf="@+id/tv_label"
        app:layout_constraintBottom_toBottomOf="@+id/tv_label"
        app:layout_constraintVertical_bias="0.5"/>


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_label"
        style="@style/BaseText.T3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_L8"
        android:textColor="@color/color_C105"
        app:layout_constraintLeft_toRightOf="@+id/iv_label"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        tools:text="呵呵呵呵呵呵"
        android:singleLine="true"/>

</androidx.constraintlayout.widget.ConstraintLayout>