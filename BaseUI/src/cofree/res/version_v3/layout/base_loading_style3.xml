<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.qq.reader.widget.CooperateLoadingView
        android:id="@+id/loadingView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toLeftOf="@+id/loadingText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/loadingText"
        style="@style/BaseText.T3_C105"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_L6"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/loadingView"
        app:layout_constraintBottom_toBottomOf="@id/loadingView"
        app:layout_constraintLeft_toRightOf="@id/loadingView"
        android:text="@string/xlistview_header_hint_loading"
        tools:text="正在加载..." />
</androidx.constraintlayout.widget.ConstraintLayout>