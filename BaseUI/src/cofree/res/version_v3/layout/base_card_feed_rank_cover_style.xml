<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    style="@style/CardFeedCover">
    <com.qq.reader.view.CoverImageView
        android:id="@+id/img_1"
        style="@style/Card_FeedCover_Img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/img_2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:top_right="false"
        tool:src="@color/color_C401"/>

    <ImageView
        android:id="@+id/img_2"
        style="@style/Card_FeedCover_Img"
        app:layout_constraintLeft_toRightOf="@+id/img_1"
        app:layout_constraintRight_toLeftOf="@+id/img_3"
        tool:src="@color/color_C201"/>

    <ImageView
        android:id="@+id/img_3"
        style="@style/Card_FeedCover_Img"
        app:layout_constraintLeft_toRightOf="@id/img_2"
        app:layout_constraintRight_toLeftOf="@+id/img_4"
        tool:src="@color/color_C501"/>
    <com.qq.reader.view.CoverImageView
        android:id="@+id/img_4"
        style="@style/Card_FeedCover_Img"
        app:layout_constraintLeft_toRightOf="@id/img_3"
        app:layout_constraintRight_toRightOf="parent"
        app:top_left="false"
        tool:src="@color/color_C701"/>
</androidx.constraintlayout.widget.ConstraintLayout>