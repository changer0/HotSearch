<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_selector"
    android:paddingLeft="@dimen/spacing_L2"
    android:paddingTop="@dimen/spacing_L6"
    android:paddingRight="@dimen/spacing_L2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_cover"
        style="@style/Cover.LCover"
        android:layout_marginEnd="@dimen/margin_L2"
        android:layout_marginRight="@dimen/margin_L2"
        android:layout_marginBottom="@dimen/spacing_L6"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@color/color_C201" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_score"
        android:layout_width="30dp"
        android:layout_height="16dp"
        style="@style/BaseText.T5_C101"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        app:layout_constraintStart_toStartOf="@id/iv_cover"
        android:background="@drawable/bg_book_score"
        android:gravity="center"
        android:maxLines="1"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="8.5分" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_title"
        style="@style/Card_Lcover_Title"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginTop="@dimen/margin_L6"
        android:layout_marginBottom="@dimen/margin_L6"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        app:layout_constraintStart_toEndOf="@id/iv_cover"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="sdfgdsgfdgdfgdfgdfgfdgfdgfdgfdgfdfggddfgfdg" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_content"
        style="@style/Card_Lcover_Content"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginTop="@dimen/margin_L6"
        android:maxLines="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_cover"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:text="中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试中文超长测试" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_author"
        style="@style/Card_Lcover_Author"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginEnd="@dimen/margin_L6"
        android:layout_marginRight="@dimen/margin_L6"
        android:layout_marginBottom="@dimen/margin_L6"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        app:layout_constraintEnd_toStartOf="@+id/tv_tag1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        app:layout_constraintRight_toLeftOf="@+id/tv_tag1"
        app:layout_constraintStart_toEndOf="@id/iv_cover"
        tools:text="作者名字很" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_tag1"
        style="@style/Card_Lcover_Tag"
        android:layout_marginRight="@dimen/margin_L8"
        android:layout_marginBottom="@dimen/margin_L6"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        app:layout_constraintRight_toLeftOf="@+id/tv_tag2"
        tools:text="54.7万字" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_tag2"
        style="@style/Card_Lcover_Tag"
        android:layout_marginRight="@dimen/margin_L8"
        android:layout_marginBottom="@dimen/margin_L6"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        app:layout_constraintRight_toLeftOf="@+id/tv_tag3"
        tools:text="东方" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_tag3"
        style="@style/Card_Lcover_Tag"
        android:layout_marginRight="@dimen/margin_L8"
        android:layout_marginBottom="@dimen/margin_L6"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        app:layout_constraintRight_toLeftOf="@id/tv_tag4"
        app:layout_goneMarginRight="0dp"
        tools:text="玄幻广"
        tools:visibility="visible" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_tag4"
        style="@style/Card_Lcover_Tag"
        android:layout_marginBottom="@dimen/margin_L6"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="玄幻" />

    <View
        android:id="@+id/divider"
        style="@style/DividerInCard"
        android:layout_width="0dp"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginTop="@dimen/margin_L6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_cover"
        app:layout_constraintTop_toBottomOf="@+id/iv_cover"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
