<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/padding_L2"
    android:paddingBottom="@dimen/padding_L6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_c107_selector">

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/title"
        style="@style/BaseText.T7_C106"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_L3"
        app:layout_constraintBottom_toTopOf="@+id/content"
        app:layout_constraintEnd_toEndOf="@id/content"
        app:layout_constraintStart_toStartOf="@+id/content"
        app:layout_constraintTop_toTopOf="parent"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="标题" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/content"
        style="@style/BaseText.T8_C105"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginTop="@dimen/margin_L6"
        android:layout_marginEnd="@dimen/margin_L2"
        android:lineSpacingMultiplier="1.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容" />

    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_cover1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toStartOf="@+id/iv_cover2"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/content"
        android:layout_marginTop="@dimen/margin_L6"
        app:layout_constraintStart_toStartOf="@+id/content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:background="@color/color_C201" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/book_shadow_height"
        android:background="@drawable/book_shadow"
        app:layout_constraintTop_toBottomOf="@id/iv_cover1"
        app:layout_constraintStart_toStartOf="@id/iv_cover1"
        app:layout_constraintEnd_toEndOf="@id/iv_cover1"/>

    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_cover2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="@dimen/margin_L4"
        android:layout_marginEnd="@dimen/margin_L4"
        app:layout_constraintTop_toTopOf="@id/iv_cover1"
        app:layout_constraintEnd_toStartOf="@+id/iv_cover3"
        app:layout_constraintStart_toEndOf="@+id/iv_cover1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover1"
        tools:background="@color/color_C201" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/book_shadow_height"
        android:background="@drawable/book_shadow"
        app:layout_constraintTop_toBottomOf="@id/iv_cover2"
        app:layout_constraintStart_toStartOf="@id/iv_cover2"
        app:layout_constraintEnd_toEndOf="@id/iv_cover2"/>

    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_cover3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="@+id/content"
        app:layout_constraintTop_toTopOf="@id/iv_cover1"
        app:layout_constraintStart_toEndOf="@id/iv_cover2"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover1"
        tools:background="@color/color_C201" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/book_shadow_height"
        android:background="@drawable/book_shadow"
        app:layout_constraintTop_toBottomOf="@id/iv_cover3"
        app:layout_constraintStart_toStartOf="@id/iv_cover3"
        app:layout_constraintEnd_toEndOf="@id/iv_cover3"/>

</androidx.constraintlayout.widget.ConstraintLayout>