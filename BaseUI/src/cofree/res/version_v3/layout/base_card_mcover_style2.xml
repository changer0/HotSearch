<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/mask_book_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/bg_bookshelf_list_item_top"
        tools:visibility="visible"
        android:visibility="invisible"/>

    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_cover"
        style="@style/Cover.MCover"
        android:layout_marginStart="@dimen/margin_L2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/mask_book_top"
        android:layout_marginTop="@dimen/margin_L6"
        tools:scaleType="fitXY"
        tools:src="@color/color_C201"/>

    <View
        android:id="@+id/tv_download_coupons_bg"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:background="@drawable/icon_download_coupons"
        app:layout_constraintStart_toStartOf="@id/iv_cover"
        app:layout_constraintEnd_toEndOf="@id/iv_cover"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        android:visibility="gone"
        tools:visibility="visible"/>


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_download_coupons"
        android:layout_width="0dp"
        android:layout_height="14dp"
        app:layout_constraintStart_toStartOf="@id/tv_download_coupons_bg"
        app:layout_constraintEnd_toEndOf="@id/tv_download_coupons_bg"
        app:layout_constraintBottom_toBottomOf="@id/tv_download_coupons_bg"
        app:layout_constraintTop_toTopOf="@id/tv_download_coupons_bg"
        tools:text="剩余3天"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="@dimen/margin_L8"
        android:gravity="center"
        style="@style/BaseText.T6_C801"
        android:visibility="gone"
        tools:visibility="visible"/>

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/book_shadow_height"
        android:background="@drawable/book_shadow"
        app:layout_constraintTop_toBottomOf="@id/iv_cover"
        app:layout_constraintStart_toStartOf="@id/iv_cover"
        app:layout_constraintEnd_toEndOf="@id/iv_cover"
        app:layout_constraintBottom_toBottomOf="@id/mask_book_top"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_title"
        style="@style/BaseText.T7_C110"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="@id/iv_cover"
        app:layout_constraintStart_toEndOf="@id/iv_cover"
        app:layout_constraintEnd_toStartOf="@id/checkbox"
        android:layout_marginStart="@dimen/margin_L4"
        tools:text="呵呵呵呵呵呵呵呵呵呵呵呵"
        android:layout_marginTop="@dimen/margin_L4"
        android:layout_marginEnd="@dimen/margin_L2"
        app:layout_goneMarginEnd="@dimen/margin_L2"/>

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_content"
        style="@style/BaseText.T8_C105"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_L6"
        android:ellipsize="end"
        android:visibility="visible"
        android:maxLines="1"
        tools:text="呵呵呵呵呵呵呵呵呵呵呵呵aaaaa"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintEnd_toStartOf="@id/container_tag1"
        android:layout_marginEnd="@dimen/margin_L6"
        app:layout_goneMarginEnd="@dimen/margin_L2" />


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_tag"
        style="@style/BaseTag.Style6"
        tools:text="更新"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        android:layout_marginTop="@dimen/margin_L6"
        app:layout_constraintTop_toBottomOf="@id/tv_content"
        tools:visibility="visible"
        android:visibility="gone"/>


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_intro1"
        android:layout_width="wrap_content"
        style="@style/BaseText.T4_C104"
        tools:text="呵呵呵呵呵呵"
        app:layout_constraintStart_toEndOf="@id/tv_tag"
        android:layout_marginTop="@dimen/margin_L6"
        app:layout_constraintTop_toBottomOf="@id/tv_content"
        android:layout_marginStart="@dimen/margin_L8"
        app:layout_goneMarginStart="0dp"/>

    <View
        android:id="@+id/view_divider"
        android:layout_width="1dp"
        android:layout_height="10dp"
        android:background="@color/color_C109"
        app:layout_constraintStart_toEndOf="@id/tv_intro1"
        app:layout_constraintTop_toTopOf="@id/tv_intro1"
        app:layout_constraintBottom_toBottomOf="@id/tv_intro1"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginStart="@dimen/margin_L8"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginTop="1dp"/>


    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_intro2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/BaseText.T4_C104"
        tools:text="呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵呵"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/view_divider"
        android:layout_marginTop="@dimen/margin_L6"
        app:layout_constraintTop_toBottomOf="@id/tv_content"
        android:layout_marginStart="@dimen/margin_L8"
        app:layout_constraintEnd_toStartOf="@id/checkbox"
        android:layout_marginEnd="@dimen/margin_L2"
        app:layout_goneMarginEnd="@dimen/margin_L2"
        app:layout_constraintHorizontal_bias="0"/>


    <View
        android:id="@+id/mask_book_offline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/checkbox"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/margin_L2"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        android:background="#99FFFFFF"
        android:visibility="gone"/>


    <LinearLayout
        android:id="@+id/container_tag1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintBottom_toTopOf="@id/tv_intro1"
        app:layout_constraintEnd_toStartOf="@id/checkbox"
        android:layout_marginEnd="@dimen/margin_L2"
        app:layout_goneMarginEnd="@dimen/margin_L2">

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_tag1"
            style="@style/BaseText.T5_C104"
            android:textColor="@color/text_color_c104_selector"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:gravity="center"
            android:includeFontPadding="true"
            android:background="@drawable/bg_stroke_c103_selector"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/recommend_books"
            android:drawableEnd="@drawable/arrow_right_small_gray"
            android:paddingEnd="@dimen/padding_L8"
            android:paddingStart="@dimen/padding_L8"
            android:drawablePadding="@dimen/common_dp_2"/>
    </LinearLayout>


    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/margin_L2"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false"
        tools:visibility="visible"
        android:button="@drawable/base_checkbox_background"
        android:focusableInTouchMode="false" />

</androidx.constraintlayout.widget.ConstraintLayout>