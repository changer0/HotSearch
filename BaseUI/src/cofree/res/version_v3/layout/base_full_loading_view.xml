<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    tools:visibility="visible">

    <com.qq.reader.widget.CooperateLoadingView
        android:id="@+id/default_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/default_loading_text"
        style="@style/BaseText.T3_C105"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/xlistview_header_hint_loading_huawei"/>

</LinearLayout>