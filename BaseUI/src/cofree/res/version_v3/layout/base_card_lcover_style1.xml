<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Card.Lcover"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_selector"
    android:paddingBottom="0dp"
    tools:background="#ffffff">

    <com.qq.reader.view.CoverImageView
        android:id="@+id/iv_cover"
        style="@style/Cover.LCover"
        android:layout_marginBottom="@dimen/margin_L6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@color/color_C201" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_score"
        android:layout_width="30dp"
        android:layout_height="16dp"
        style="@style/BaseText.T5_C101"
        app:layout_constraintBottom_toBottomOf="@id/iv_cover"
        app:layout_constraintStart_toStartOf="@id/iv_cover"
        android:background="@drawable/bg_book_score"
        android:gravity="center"
        android:maxLines="1"
        android:visibility="gone"
        tools:visibility="visible"
        tools:text="8.5分" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_title"
        style="@style/Card_Lcover_Title"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginTop="@dimen/margin_L7"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        app:layout_constraintStart_toEndOf="@id/iv_cover"
        app:layout_constraintTop_toTopOf="@id/iv_cover"
        tools:text="我擦嘞我擦嘞我擦嘞我擦嘞我擦嘞我擦嘞我擦嘞" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_content"
        style="@style/Card_Lcover_Content"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginLeft="@dimen/margin_L2"
        android:layout_marginTop="@dimen/margin_L6"
        android:maxLines="2"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:text="嘞我擦嘞我擦嘞" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_discount_desc"
        style="@style/BaseText.T3_C401"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginEnd="@dimen/margin_L6"
        android:layout_marginBottom="@dimen/margin_L9"
        app:layout_constraintBottom_toTopOf="@+id/tv_origin_price"
        app:layout_constraintEnd_toStartOf="@+id/bt_buy"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        app:layout_constraintRight_toLeftOf="@+id/bt_buy"
        app:layout_constraintStart_toEndOf="@id/iv_cover"
        tools:text="限免两天" />

    <com.qq.reader.widget.TextViewDel
        android:id="@+id/tv_origin_price"
        style="@style/BaseText.T4_C105"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginEnd="@dimen/margin_L6"
        app:layout_constraintBottom_toTopOf="@+id/tv_sale_info"
        app:layout_constraintEnd_toStartOf="@+id/bt_buy"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginBottom="@dimen/margin_L9"
        app:layout_constraintLeft_toRightOf="@id/iv_cover"
        app:layout_constraintStart_toEndOf="@id/iv_cover"
        app:delLine="true"
        tools:text="2.99元一本" />

    <com.qq.reader.widget.ReaderTextView
        android:id="@+id/tv_sale_info"
        style="@style/BaseText.T5_C105"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginEnd="@dimen/margin_L6"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover"
        app:layout_constraintEnd_toStartOf="@+id/bt_buy"
        app:layout_constraintStart_toEndOf="@+id/iv_cover"
        tools:text="已领取3000本"
        tools:visibility="visible" />

    <com.qq.reader.widget.ReaderButton
        android:id="@+id/bt_buy"
        style="@style/BaseButton.Small.Style1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="未开始" />

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginStart="@dimen/margin_L2"
        android:layout_marginLeft="@dimen/margin_L2"
        android:background="@color/color_C103"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_cover"
        app:layout_constraintStart_toEndOf="@+id/iv_cover"
        tools:visibility="visible" />

    <!--为了兼容Oppo暂时放在这里 by lulu-->
    <LinearLayout
        android:id="@+id/ll_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/pb_buy_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:progress="100" />

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/tv_buy_state_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="已领50%" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
