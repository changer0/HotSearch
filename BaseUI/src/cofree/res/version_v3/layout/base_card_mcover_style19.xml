<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <include layout="@layout/base_card_mcover_style20"
        android:id="@+id/two_book_hor_0"
        />

    <include layout="@layout/base_card_mcover_style20"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/two_book_hor_1"
        app:layout_constraintTop_toBottomOf="@id/two_book_hor_0"
        app:layout_constraintStart_toStartOf="parent"
        />

    <include layout="@layout/base_card_mcover_style20"
        android:id="@+id/two_book_hor_2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/two_book_hor_1"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>