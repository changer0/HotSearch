    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/radio_button_bookshelf"
        android:layout_weight="1.0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null">

        <ImageView
            android:id="@+id/iv_tabs_bookshelf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"
            android:src="@drawable/skin_tab_bookshef"
            android:tag="@string/menu_image_tag" />

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/bookshelf_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_L9"
            android:layout_marginBottom="@dimen/spacing_L8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_tabs_bookshelf"
            app:layout_constraintBottom_toBottomOf="parent"
            android:tag="@string/menu_text_tag"
            android:text="@string/bookshelf"
            android:textColor="@color/skin_tab_textcolor_selector"
            style="@style/BaseText.T5" />

        <ImageView
            android:id="@+id/maintab_badge_bookshelf"
            android:layout_width="@dimen/sliding_tab_red_dot_width_height"
            android:layout_height="@dimen/sliding_tab_red_dot_width_height"
            android:background="@drawable/bookshelf_news_newtip"
            app:layout_constraintTop_toTopOf="@id/iv_tabs_bookshelf"
            app:layout_constraintEnd_toStartOf="@id/space_bookshelf"
            android:contentDescription="@null"
            android:visibility="invisible"
            tools:visibility="visible" />

        <android.widget.Space
            android:id="@+id/space_bookshelf"
            app:layout_constraintTop_toTopOf="@id/iv_tabs_bookshelf"
            app:layout_constraintEnd_toEndOf="@id/iv_tabs_bookshelf"
            app:layout_constraintStart_toEndOf="@id/iv_tabs_bookshelf"
            android:layout_marginStart="3dp"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


