<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:gravity="bottom">

    <LinearLayout
        android:id="@+id/xlistview_header_content"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/common_dp_68"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="12dp">

        <LinearLayout
            android:id="@+id/xlistview_pro"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_dp_24"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/xlistview_header_arrow"
                android:layout_width="@dimen/common_dp_14"
                android:layout_height="@dimen/common_dp_14"
                android:src="@drawable/pulldown_loading_arrow" />

            <include
                layout="@layout/base_loading_style3"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xlistview_pro"
            android:layout_marginTop="@dimen/common_dp_2"
            android:gravity="center">

            <TextView
                android:id="@+id/xlistview_header_time_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xlistview_header_last_time"
                style="@style/BaseText.T5_C105"/>

            <TextView
                android:id="@+id/xlistview_header_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BaseText.T5_C105"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>