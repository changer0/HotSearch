<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/common_titler"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bookstore_titlerbar_height"
    android:paddingTop="@dimen/bookstore_titlerbar_padding_top"
    android:visibility="gone"
    tools:visibility="visible">

    <com.qq.reader.view.DeepLinkBackView
        android:id="@+id/back_deep_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/common_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_header_left_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/original_titlerbar_height"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/spacing_L2"
            android:paddingRight="@dimen/padding_L2"
            android:scaleType="centerInside"
            android:src="@drawable/titlebar_icon_back_selector"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_centerVertical="true"/>


        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/profile_header_left_button"
            android:layout_width="@dimen/common_dp_48"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/profile_header_left_back"
            android:contentDescription="@null"
            android:paddingLeft="@dimen/common_title_back_icon_right_left_padding"
            android:scaleType="centerCrop"
            android:textColor="@color/oppo_text_color_c104_selector"
            android:textSize="@dimen/oppo_text_size_class_1"
            android:visibility="gone"
            tools:text="返回"
            tools:visibility="gone"/>


        <ImageView
            android:id="@+id/webpage_close"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/original_titlerbar_height"
            android:layout_toRightOf="@+id/profile_header_left_button"
            android:paddingLeft="@dimen/spacing_L6"
            android:paddingRight="@dimen/padding_L2"
            android:scaleType="centerInside"
            android:src="@drawable/button_bookshelf_top_cancel"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_centerVertical="true"/>


        <ImageView
            android:id="@+id/iv_read_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/common_dp_16"
            android:layout_toRightOf="@+id/profile_header_left_button"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            tools:visibility="visible"
            android:visibility="gone" />

        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/title_read_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BaseText.T1_C106"
            android:visibility="gone"
            tools:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_read_time"
            app:qq_font="siyuansong"
            tools:text="146"
            android:layout_marginLeft="@dimen/margin_L8" />


        <com.qq.reader.widget.ReaderTextView
            android:id="@+id/title_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/BaseText.T4_C105"
            android:visibility="gone"
            android:text="@string/title_read_time_minute"
            tools:visibility="gone"
            android:layout_toRightOf="@+id/title_read_time"
            android:layout_marginLeft="@dimen/margin_L9"
            android:layout_marginTop="17dp" />


        <LinearLayout
            android:id="@+id/ll_profile_header_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/webpage_close"
            tools:visibility="visible">

            <ProgressBar
                android:id="@+id/profile_header_progress"
                android:layout_width="@dimen/loading_icon_80x80"
                android:layout_height="@dimen/loading_icon_80x80"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/ll_profile_header_title"
                android:indeterminateDrawable="@drawable/progress_loading"
                android:indeterminateDuration="1000"
                android:indeterminateOnly="true"
                android:maxHeight="@dimen/loading_icon_80x80"
                android:maxWidth="@dimen/loading_icon_80x80"
                android:minHeight="@dimen/loading_icon_80x80"
                android:minWidth="@dimen/loading_icon_80x80"
                android:visibility="gone" />

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/profile_header_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="260dp"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/color_C106"
                android:textSize="@dimen/text_size_1"
                tools:text="专属推荐" />

            <ImageView
                android:id="@+id/profile_header_title_sort"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/profile_header_title"
                android:contentDescription="@null"
                android:paddingLeft="6dp"
                android:paddingRight="5dp"
                android:scaleType="fitCenter"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/original_titlerbar_height"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/profile_header_right_collect"
                android:layout_width="@dimen/original_titlerbar_height"
                android:layout_height="@dimen/original_titlerbar_height"
                android:background="@drawable/titlebar_icon_bg_selector"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/profile_header_right_image"
                android:layout_width="@dimen/original_titlerbar_height"
                android:layout_height="@dimen/original_titlerbar_height"
                android:background="@drawable/titlebar_icon_bg_selector"
                android:contentDescription="@null"
                android:scaleType="centerInside"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/original_titlerbar_height"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/profile_header_right_button2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/titlebar_icon_bg_selector"
                android:gravity="center"
                android:paddingRight="14dp"
                android:scaleType="centerInside"
                android:textColor="@color/color_C106"
                android:textSize="14dp"
                android:visibility="gone" />

            <com.qq.reader.widget.ReaderTextView
                android:id="@+id/profile_header_right_button"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/titlebar_icon_bg_selector"
                android:gravity="center"
                android:paddingRight="14dp"
                android:scaleType="centerInside"
                android:textColor="@color/color_C106"
                android:textSize="14dp"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/black_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="#cccccc"
        android:visibility="gone"
        />
</RelativeLayout>