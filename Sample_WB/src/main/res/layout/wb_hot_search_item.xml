<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/hotIndex"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#D900FF"
        tools:text="1"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/hotTitle"
        tools:text="热搜内容"
        android:textSize="22dp"
        android:textColor="#0048FF"
        app:layout_constraintStart_toEndOf="@id/hotIndex"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/hotIndex"
        app:layout_constraintBottom_toBottomOf="@id/hotIndex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>